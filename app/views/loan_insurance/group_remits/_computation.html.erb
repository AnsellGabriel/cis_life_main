<div class="card pt-4" style="max-height: 300px; width: 50%; margin-left: auto">
  <div class="card-body">
      <div class="d-flex gap-3">
        <div style="width: 100%">
          <div class="text-secondary d-flex justify-content-between">
            <%= content_tag :span, "Gross premium", style: "font-size: .8rem" %>
            <%= content_tag :span, "#{to_curr(group_remit.total_gross_premium)}", style: "color: var(--bs-blue); font-size: .8rem"%>
          </div>
          <hr>
        </div>
        
      </div>
      <div class="d-flex gap-3">
        <div style="width: 100%">
          <div class="text-secondary d-flex justify-content-between">
            <%= content_tag :span, "This section will update once reviewing process is complete", style: "font-size: .6rem" %>
          </div>
           <% if agreement.coop_sf %>
            <div class="text-secondary d-flex justify-content-between">
              <%= content_tag :span, "Coop service fee", style: "font-size: .8rem" %>
              <%= content_tag :span, "(#{to_curr(group_remit.total_coop_commissions)})", style: "font-size: .8rem; color: var(--bs-green)"%>
            </div>      
          <% end %>
          <div class="text-secondary d-flex justify-content-between">
            <%= content_tag :span, "Unused premium", style: "font-size: .8rem" %>
            <%= content_tag :span, "(#{to_curr(group_remit.total_unused_premium)})", style: "font-size: .8rem; color: var(--bs-green)"%>
          </div>
          <div class="text-secondary d-flex justify-content-between">
            <%= content_tag :span, "#{group_remit.pending? ? "For review" : "Denied"} premium", style: "font-size: .8rem" %>
            <%= content_tag :span, "(#{to_curr(group_remit.denied_principal_premiums)})", style: "font-size: .8rem; color: var(--bs-red)"%>
          </div>       
        </div>
      </div>
      <hr>
      <div class="<%= flex_justify_align('between') %>">
        <%= content_tag :h6, "Net Premium", style: "width: 200px;", class: 'text-primary' %>
        <%= content_tag :h6, "#{number_to_currency(group_remit.coop_net_premium, unit: "₱", precision: 2)}", style: "color: var(--bs-blue);"%>
      </div>

      <% if group_remit.total_excess_premium > 0 %>
        <div class="<%= flex_justify_align('between') %>">
          <%= content_tag :p, "Excess Premium", style: "width: 200px;", class: 'text-success', style: "font-size: .8rem" %>
          <%= content_tag :p, "(#{number_to_currency(group_remit.total_excess_premium, unit: "₱", precision: 2)})", style: "font-size: .8rem; color: var(--bs-green);"%>
        </div>
      <% end %>
  </div>
</div>
