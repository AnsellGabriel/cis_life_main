<%= simple_form_for(batch) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs mb-3">
    <div class="row <%= flex_justify_align('','center') %>">
      <%= f.hidden_field :group_remit_id, value: params[:group_remit_id] %>
      <%= f.association :coop_member, 
          collection: @coop_members, 
          include_blank: "Search member",
          input_html: { 
            id: "member_id", 
            data: {  
              controller: "slim-select" }  
            }, label: false,
          wrapper_html: { class: 'col-md-9' }
      %>
      <%= f.input :terms, label: false, placeholder: 'Terms', wrapper_html: { class: 'col-md-3' } %>
    </div>
    <div class="row">
      <%= f.input :loan_amount, label: false, placeholder: 'Loan amount', wrapper_html: {class: 'col-md-12'} %>
    </div>
    <div class="row">
      <%= f.input :date_release, as: :string, input_html: {data: {
                controller: "flatpickr",
                flatpickr_max_date: Time.zone.now,
                flatpickr_next_arrow: "Next",
                flatpickr_prev_arrow: "Prev"},
                placeholder: 'Date release'}, label: false,
                wrapper_html: {class: 'col-md-6'} %>
      <%= f.input :date_mature, as: :string, input_html: {data: {
                controller: "flatpickr",
                flatpickr_max_date: Time.zone.now,
                flatpickr_next_arrow: "Next",
                flatpickr_prev_arrow: "Prev"},
                placeholder: 'Date mature'}, label: false,
                wrapper_html: {class: 'col-md-6'} %>
    </div>
  </div>

  <div class="form-actions text-end">
    <%= f.button :submit, 'Add', class: small_btn('primary') %>
    <%= link_to "Cancel", :back, class: small_btn('secondary') %>
  </div>
<% end %>
