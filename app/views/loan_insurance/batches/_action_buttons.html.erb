<div  class="<%= flex_justify_align('center') %> gap-1" >
	<%= link_to 'Show', loan_insurance_batch_path(batch),
		data: {turbo_frame: "modal-xl"}, 
		class: small_btn('primary') 
	%>

	<% if batch.batch_remarks.exists? %>
		<%= link_to "Remarks", modal_remarks_group_remit_batch_path(group_remit, batch), data: { turbo_frame: "modal" }, class: small_btn('warning') %>
	<% end %>

	<% if batch.batch_health_decs.exists? %>
		<%= link_to health_dec_group_remit_batch_path(group_remit, batch, for_und: true), 
			class: small_btn('primary'), 
			title: 'Health Declaration Form',
			data: { turbo_frame: "modal-xl" } do %>
			<i class="bi bi-file-earmark-medical"></i>
		<% end %>
	<% end %>

	<% if group_remit.pending? && group_remit.instance_of?(LoanInsurance::Batch) %>

		<% if (batch.recent? || batch.for_reconsideration?) && batch.batch_health_decs.blank? && batch.loan_amount > agreement.nel %>
			<%= link_to new_group_remit_batch_health_declaration_path(group_remit, batch),
				class: small_btn('warning'), 
				title: 'Health Declaration Form',
				data: { turbo_frame: "modal-xl" } do %> 
				<i class="bi bi-file-earmark-medical"></i>
			<% end %>
		<% end %>

		<% unless batch.renewal? || batch.terminated? %>
			<%= button_to group_remit_batch_path(group_remit, batch), 
				method: :delete,
				form: { 
				data: { turbo_frame: "_top", 
				turbo_confirm: "Delete Batch: #{member.last_name}, #{member.first_name} #{member.middle_name}?" } 
				}, 
				class: small_btn('danger') do %>
						<i class="bi bi-x-lg"></i>                    
			<% end %>
		<% end %>
	<% end %>

</div>