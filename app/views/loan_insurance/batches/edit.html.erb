<%= turbo_frame_tag "modal" do %>
  <div class="modal-header">
    <%= content_tag :h5, "Edit Loan Details", class: "modal-title text-center", id: "staticBackdropLabel" %>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  
  <div class="modal-body">
    <%= render "form", batch: @batch, group_remit_id: @group_remit.id %>
  </div>
<% end %>