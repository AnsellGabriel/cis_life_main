<%= content_tag :h1, "List of Loan Insurance Retentions" %>


<div class="text-end mb-3">
  <%= link_to new_loan_insurance_retention_path, class: 'btn btn-primary' do %>
    New Retention
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Amount</th>
        <th>Active</th>
        <th>Date Activated</th>
        <th>Date Deactivated</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @retentions.each do |loan_insurance_retention| %>
        <tr>

        <th scope="row"><%= loan_insurance_retention.id %></th>
        <td><%= loan_insurance_retention.amount %></td>
        <td><%= loan_insurance_retention.active %></td>
        <td><%= loan_insurance_retention.date_activated %></td>
        <td><%= loan_insurance_retention.date_deactivated %></td>
    
          <td>
            <%= link_to 'View', loan_insurance_retention, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_loan_insurance_retention_path(loan_insurance_retention), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", loan_insurance_retention, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
