<%= content_tag :h1, "Claim Documents" %>
<div class="text-end mb-3">
  <%= link_to new_claims_claim_document_path, class: 'btn btn-primary' do %>
    New Cause
  <% end %>
</div>
<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @claim_documents.each do |doc| %>
        <tr>
          <th scope="row"><%= doc.id %></th>
          <td><%= doc.name %></td>
          <td><%= doc.description %></td>
          <td>
            <%= link_to 'View', claims_claim_document_path(doc), class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_claims_claim_document_path(doc), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", claims_claim_document_path(doc), class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
