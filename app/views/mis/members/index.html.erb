<%= form_tag(coop_members_path, method: :get) do %>
  <div class="d-flex gap-1">
    <%= select_tag :cooperative_id, options_for_select(@cooperatives.map { |coop| [coop.name, coop.id] }), include_blank: "Search Cooperative", data: { controller: "slim-select" }, style: 'max-width: 700px;' %>
    <%= submit_tag "Choose", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>