
<%= simple_form_for(dependent_remark) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs mb-3">
    <%= f.hidden_field :status, value: @rem_status %>
    <%= f.hidden_field :batch_dependent_id, value: @dependent.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :group_remit_id, value: @group_remit.id %>
    <%= f.hidden_field :process_coverage_id, value: @process_coverage.id %>
    <%= f.input :remark %>    
  </div>

  <div class="form-actions text-end">
      <%= f.button :submit, class: 'btn-success' %>
  </div>
<% end %>
