<%= content_tag :h1, "List of Reinsurance Members" %>


<div class="text-end mb-3">
  <%= link_to new_reinsurance_member_path, class: 'btn btn-primary' do %>
    New Reinsurance Member
  <% end %>
</div>


  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
      <th>#</th>
            <th>Reinsurance</th>
            <th>Member</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
      <% @reinsurance_members.each do |reinsurance_member| %>
        <tr>

        <th scope="row"><%= reinsurance_member.id %></th>
        <td><%= reinsurance_member.reinsurance %></td>
        <td><%= reinsurance_member.member %></td>
    
          <td>
            <%= link_to 'View', reinsurance_member, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_reinsurance_member_path(reinsurance_member), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", reinsurance_member, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
