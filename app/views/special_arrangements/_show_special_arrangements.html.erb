<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Arrangements</th>
        <th>
          <div class="text-center">
            <%= link_to '<i class="bi bi-plus-square"></i> Add'.html_safe, new_special_arrangement_path(v: a), class: 'btn btn-sm btn-primary', data: { turbo_frame: "remote_modal" } %>
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
      <% a.special_arrangements.each do |sa| %>
        <tr>
          <td><%= sa.arrangement %></td>
          <td class="text-center">
            <%#= link_to 'View', anniversary, class: 'btn' %>
            <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_special_arrangement_path(sa), class: 'btn btn-secondary btn-sm',  data: { turbo_frame: "remote_modal" } %>
            <%= link_to '<i class="bi bi-trash3"></i>'.html_safe, sa,  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
