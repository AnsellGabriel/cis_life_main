 <div class="text-end mb-3">
      <%= link_to "Back", index_coop_process_claims_path, class: 'btn btn-secondary btn-lg' %>
      <%= render 'action_button' %>
    </div>
<div class="row">
  <div class="col-md-6">
    <%= render 'show_coop' unless current_user.userable_type == 'CoopUser' %>
    <%= render 'claims_detail' %>
    <% unless @process_claim.cause.nil? %>
      <div class="card">
      <div class="card-body">
        <%= render 'show_cause' %>
      </div>
      </div>
    <% end %>
    <div class="card">
        <h5 class="card-header">Claimant details</h5>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4">Name</dt>
          <dd class="col-sm-8"><%= @process_claim.claimant_name %></dd>
          <dt class="col-sm-4">Relation</dt>
          <dd class="col-sm-8"><%= @process_claim.relationship %></dd>
          <dt class="col-sm-4">Contact</dt>
          <dd class="col-sm-8"><%= @process_claim.claimant_contact_no %></dd>
          <dt class="col-sm-4">Email</dt>
          <dd class="col-sm-8"><%= @process_claim.claimant_email %></dd>
        </dl>
      </div>
    </div>
  </div>
    
  <div class="col-md-6">
    <% if @process_claim.file_claim? %>
      <div class="card">
      <div class="card-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Documents <br>
                <%= content_tag :span, 'Required <i class="bi bi-asterisk"></i>'.html_safe, class: "badge rounded-pill text-bg-warning" %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @claim_type_document.each do |doc| %>
              <tr>
                <% @claim_attach = ClaimAttachment.find_by(process_claim_id: @process_claim, claim_type_document: doc) %>
                <td><%= doc.document %> <%= content_tag :span, '<i class="bi bi-asterisk"></i>'.html_safe, class: "badge rounded-pill text-bg-warning" if doc.required %> <br>
                <%= content_tag :small, @claim_attach.created_at, class: "text-muted" unless @claim_attach.nil? %></td>
                <td class="text-end">
                <% unless @claim_attach.nil? %>
                <%= link_to '<i class="bi bi-eye"></i>'.html_safe, rails_blob_url(@claim_attach.doc), target: :_blank, class: 'btn btn-outline-primary btn-sm' if @claim_attach.doc.attached?  %>
                <%= link_to '<i class="bi bi-trash-fill"></i>'.html_safe, @claim_attach, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } if @claim_attach.doc.attached? && current_user.userable_type == 'CoopUser' && @process_claim.file_claim? %>
                <% else %>
                <%= link_to '<i class="bi bi-upload"></i>'.html_safe, claim_attachments_new_path(p: @process_claim.id, d: doc.id), class: "btn btn-primary", data: { turbo_frame: "remote_modal" } if current_user.userable_type == 'CoopUser' && @process_claim.file_claim? %>
                <% end %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
      </div>
    <% elsif @process_claim.submitted? %>
      <div class="card">
        <div class="card-body">
          <%= render 'claim_attachments/show_attachment' %>
        </div>
      </div>
    <% end %>
    
    
    <div class="card">
      <div class="card-body">
        <%= render 'claim_remarks/show_coop_remark' %>
      </div>
    </div> 
  </div>
</div>
