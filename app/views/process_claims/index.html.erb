<%= content_tag :h1, "List of filed claims" %>
<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Details</th>
        <th>Insurance</th>
        <%# <th>Batch</th> %>
        <%# <th>Date Incident</th>
        <th>Entry Type</th> %>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @process_claims.each do |process_claim| %>
        <tr>
        <th scope="row"><%= process_claim.id %></th>
        <td><strong><%= process_claim.claimable.get_fullname %></strong> <br>
        <%= process_claim.cooperative %> <br>
        <small><%= process_claim.agreement.agent %></small> <br>
        <%= content_tag :span, process_claim.entry_type, class: "badge rounded-pill text-bg-primary"  %> 
        <%= content_tag :span, process_claim.claim_route, class: "badge rounded-pill text-bg-secondary" %></td>
        <td><strong><%= process_claim.agreement.plan %></strong> <br>
        <small>Date Incident: <%= to_shortdate(process_claim.date_incident) %></small></td>
        <%# <td><%= process_claim.batch %>
          <td>
            <%= link_to "View", show_coop_process_claim_path(process_claim), class: "btn btn-warning btn-sm" %>
            <%= link_to 'Edit', edit_process_claim_path(process_claim), class: 'btn btn-secondary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
