<div class="mb-3">
  <%= render 'action_button' %>
</div>
<div class="row">
    <div class="col-md-6">
        <%= render 'claims_detail' %>
        <div class="card">
            <h5 class="card-header">Claimant details</h5>
            <div class="card-body">
                <dl class="row">
                  <dt class="col-sm-4">Name</dt>
                  <dd class="col-sm-8"><%= @process_claim.claimant_name %></dd>
                  <dt class="col-sm-4">Relation</dt>
                  <dd class="col-sm-8"><%= @process_claim.relationship %></dd>
                  <dt class="col-sm-4">Contact</dt>
                  <dd class="col-sm-8"><%= @process_claim.claimant_contact_no %></dd>
                  <dt class="col-sm-4">Email</dt>
                  <dd class="col-sm-8"><%= @process_claim.claimant_email %></dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-6">
      <%= render 'show_coop' %>
      <%= render 'process_claims/loan_details', loan: @loan_batch %>
      <% if @process_claim.debit_advice? %>
        <div class="card">
          <div class="card-body small">
            <h4 class="text-primary">Debit Advice - Bank Details</h4>
            <dl class="row mt-3">
              <dt class="col-sm-3">Account Name:</dt>
              <dd class="col-sm-9"><%= @bank.name %></dd>
            </dl>
            <dl class="row mt-3">
              <dt class="col-sm-3">Account Number:</dt>
              <dd class="col-sm-9"><%= @bank.account_number %></dd>
            </dl>
            <dl class="row mt-3">
              <dt class="col-sm-3">Address:</dt>
              <dd class="col-sm-9"><%= @bank.address %></dd>
            </dl>
          </div>
        </div>
      <% end %>
      <div class="card">
        <div class="card-body">
          <%#= link_to "Evaluate", evaluate_process_claim_path(@process_claim.id), class: "btn btn-warning" %>
          <h4 class="text-primary">Claims Benefit</h4>
          <%= render 'claim_benefits/show_benefit' %>
          <%= render  'claim_confinements/show_confinement' if @process_claim.claim_type == ClaimType.find_by(name: 'Hospital Confinement Claim') %>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <%= render 'claim_attachments/show_attachment' %>
        </div>
      </div>
    </div>
</div>
<%= render 'tabs' %>
<div class="row">
<div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <h4 class="col-md-6 text-primary">Recommendation</h4>
            <div class="col-md-6 text-end">
              <%= link_to '<i class="bi bi-chat-right-quote"></i> Add Remark'.html_safe, new_claim_remark_path(v: @process_claim, c: 0), class: "btn btn-primary mb-3", data: { turbo_frame: "remote_modal" } %>
            </div>
          </div>
          <%= render 'claim_remarks/show_remark' %>
        </div>
      </div>
    </div>
<div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <div class="track">
            <div class="step <%= "active" if @process_claim.claim_filed %>"> <span class="icon"> <i class="bi bi-card-list"></i> </span> <span class="text"> <small> Claims filed </small> </span> </div>
            <div class="step <%= "active" if @process_claim.processing %>"> <span class="icon"> <i class="bi bi-window"></i> </span> <span class="text"> <small> Processing </small> </span> </div>
            <div class="step <%= "active" if @process_claim.approval %>">
              <% if @process_claim.denied? %>
                <span class="icon"> <i class="bi bi-shield-x"></i></span> <span class="text"> <small> Denied </small> </span>
              <% elsif @process_claim.approved? %>
                <span class="icon"> <i class="bi bi-shield-check"></i></span> <span class="text"> <small> Approved </small> </span>
              <% else %>
                <span class="icon"> <i class="bi bi-journal-check"></i> </span> <span class="text"> <small> Evaluation </small> </span>
              <% end %>
            </div>
            <div class="step <%= "active" if @process_claim.payment %>"> <span class="icon"> <i class="bi bi-cash-coin"></i> </span> <span class="text"> <small> Payment </small>  </span> </div>
          
          </div>
        <%= render 'show_claim_track' %>
      </div>
    </div>
  </div>
</div>