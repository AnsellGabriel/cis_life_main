<div class="card" style="height: 100%; width: 100%">
  <div class="card-body">
      <div class="d-flex gap-3">
        <div style="width: 100%">
          <% unless @principal_count == 0 %>
            <div class="text-secondary d-flex justify-content-between">
              <%= content_tag :span, "Principal Premiums", style: "font-size: .8rem" %>
              <%= content_tag :span, "#{number_to_currency((@group_remit.total_principal_premium), unit: "₱", precision: 2)}", style: "font-size: .8rem; color: var(--bs-yellow);" %>
            </div>
            <% unless @dependent_count == 0 %>
              <div class="text-secondary d-flex justify-content-between">
                <%= content_tag :span, "Dependent Premiums", style: "font-size: .8rem" %>
                <%= content_tag :span, "#{number_to_currency((@group_remit.total_dependent_premiums), unit: "₱", precision: 2)}", style: "font-size: .8rem; color: var(--bs-yellow);" %>
              </div>
            <% end %>
          <% end %>
          <hr>
          <div class="d-flex justify-content-between">
            <%= content_tag :span, "Gross Premium" %>
            <%= content_tag :span, "#{number_to_currency(@group_remit.gross_premium, unit: "₱", precision: 2)}", style: "color: var(--bs-green);"%>
          </div>
          <hr>
        </div>
        
      </div>
      <div class="d-flex gap-3">
        <div style="width: 100%">
          <div class="text-secondary d-flex justify-content-between">
            <%= content_tag :span, "#{@agreement.agreement_benefits[0].proposal.coop_sf}% Coop service fee", style: "font-size: .8rem" %>
            <%= content_tag :span, "(#{number_to_currency(@group_remit.total_coop_commissions, unit: "₱", precision: 2)})", style: "font-size: .8rem; color: var(--bs-red)"%>
          </div>          
        </div>
      </div>
      
      <hr>
      
      <div class="d-flex gap-3">
        <%= content_tag :h6, "Net Premium", style: "width: 200px" %>
        <%= content_tag :h6, "#{number_to_currency(@group_remit.net_premium, unit: "₱", precision: 2)}", style: "color: var(--bs-green)"%>
      </div>
  </div>
</div>
