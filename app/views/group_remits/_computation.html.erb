<div class="card pt-4" style="max-height: 300px; width: 100%">
  <div class="card-body">
      <div class="d-flex gap-3">
        <div style="width: 100%">
          <% unless @principal_count == 0 %>
            <div class="text-secondary d-flex justify-content-between">
              <%= content_tag :span, "Principal Premiums", style: "font-size: .8rem" %>
              <%= content_tag :span, "#{to_curr(group_remit.total_principal_premium)}", style: "font-size: .8rem; color: var(--bs-blue);" %>
            </div>
            <% unless @dependent_count == 0 %>
              <div class="text-secondary d-flex justify-content-between">
                <%= content_tag :span, "Dependent Premiums", style: "font-size: .8rem" %>
                <%= content_tag :span, "#{to_curr(group_remit.total_dependent_premiums)}", style: "font-size: .8rem; color: var(--bs-blue);" %>
              </div>
            <% end %>
          <% end %>
          <hr>
          <div class="text-secondary d-flex justify-content-between">
            <%= content_tag :span, "Gross Premium", style: "font-size: .8rem" %>
            <%= content_tag :span, "#{to_curr(group_remit.gross_premium)}", style: "color: var(--bs-blue); font-size: .8rem"%>
          </div>
          <hr>
        </div>
        
      </div>
      <div class="d-flex gap-3">
        <div style="width: 100%">
          <div class="text-secondary d-flex justify-content-between">
            <%= content_tag :span, "This section will update once reiewing process is completed", style: "font-size: .6rem" %>
          </div>
          <div class="text-secondary d-flex justify-content-between">
            <%= content_tag :span, "#{@agreement.coop_sf}% Coop service fee", style: "font-size: .8rem" %>
            <%= content_tag :span, "(#{to_curr(group_remit.total_coop_commissions)})", style: "font-size: .8rem; color: var(--bs-green)"%>
          </div>      
          <div class="text-secondary d-flex justify-content-between">
            <%= content_tag :span, "Denied Principal Premiums", style: "font-size: .8rem" %>
            <%= content_tag :span, "(#{to_curr(group_remit.denied_principal_premiums)})", style: "font-size: .8rem; color: var(--bs-red)"%>
          </div>       
          <% if @agreement.plan.gyrt_type == 'family' %>
            <div class="text-secondary d-flex justify-content-between">
              <%= content_tag :span, "Denied Dependent Premiums", style: "font-size: .8rem" %>
              <%= content_tag :span, "(#{to_curr(group_remit.denied_dependent_premiums)})", style: "font-size: .8rem; color: var(--bs-red)"%>
            </div>   
          <% end %>
        </div>
      </div>
      
      <hr>
      
      <div class="d-flex gap-3">
        <%= content_tag :h6, "Net Premium", style: "width: 200px;" %>
        <%= content_tag :h6, "#{number_to_currency(group_remit.coop_net_premium, unit: "â‚±", precision: 2)}", style: "color: var(--bs-blue);"%>
      </div>
  </div>
</div>
