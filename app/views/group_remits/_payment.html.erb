<%= form_with url: payments_path(group_remit_id: group_remit.id), html: {data: {controller: 'payment-upload'}} do |form| %>
  <%= form.label :file, "Please upload proof of payment", class: "text-primary" %>
  <div class="d-flex gap-1  mb-1 align-items-center">
    <%= form.file_field :file, 
      class: "form-control", 
      style: "width: 80%" ,
      data: {payment_upload_target: 'file'}
    %>
    <%= submit_tag 'Upload', 
      class: "btn btn-sm btn-outline-success", 
      data: {turbo: 'false', action: 'click->payment-upload#submit', payment_upload_target: 'button'} 
    %>
    <% if group_remit.reupload_payment? %>
      <%= link_to payment_remarks_path(group_remit.payments.last), class: 'btn btn-sm btn-outline-danger', data: {turbo_frame: 'reg_form_modal'} do %>
        Remarks
      <% end %>
    <% end %>
  </div>
<% end %>
