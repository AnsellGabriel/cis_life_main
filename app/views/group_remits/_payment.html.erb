<%= form_with url: payment_group_remit_path(@group_remit), method: :post do |form| %>
  <%= form.label :file, "Upload proof of payment", class: "text-primary" %>
    <div class="d-flex gap-1  mb-1 align-items-center">
        <%= form.file_field :file, 
          class: "form-control", 
          style: "width: 80%" 
        %>
        <%= submit_tag 'Upload', 
          class: "btn btn-sm btn-outline-success", 
          data: {turbo: 'false'} 
        %>
    </div>
<% end %>