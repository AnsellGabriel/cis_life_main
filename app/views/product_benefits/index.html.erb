<%= content_tag :h1, "List of Product Benefits" %>


<div class="text-end mb-3">
  <%= link_to new_product_benefit_path, class: 'btn btn-primary' do %>
    New Product Benefit
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Coverage Amount</th>
        <th>Premium</th>
        <th>Agreement Benefit</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @product_benefits.each do |product_benefit| %>
        <tr>

        <td><%= product_benefit.id %></td>
        <td><%= product_benefit.coverage_amount %></td>
        <td><%= product_benefit.premium %></td>
        <td><%= product_benefit.agreement_benefit %></td>
    
          <td>
            <%= link_to 'View', product_benefit, class: 'btn' %>
            <%= link_to 'Edit', edit_product_benefit_path(product_benefit), class: 'btn' %>
            <%= link_to 'Delete', product_benefit, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
