<%= turbo_frame_tag "remark" do %>
  <table class="table table-borderless table-hover">
    <tbody>
      <% @process_claim.claim_remarks.order(created_at: :desc).each do |claim_remark| %>
        <tr>
          <td>
            <figure>
              <blockquote class="blockquote text-primary">
                <small><%= claim_remark.user %> <span class="badge bg-warning text-dark"><%= claim_remark.status %></span></small>
              </blockquote>
              <figcaption class="blockquote-footer">
                <cite title="Source Title"><%= claim_remark.created_at %></cite>
              </figcaption>
            </figure>
            <small> <%=  claim_remark.remark %> </small> </td>
          <td class="text-end">
            <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_claim_remark_path(claim_remark), class: 'btn btn-outline-primary btn-sm', data: { turbo_frame: "remote_modal" } %>
            <%= link_to '<i class="bi bi-trash3"></i>'.html_safe, claim_remark, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
