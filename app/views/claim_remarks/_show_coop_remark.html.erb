<%= turbo_frame_tag "remark" do %>
  <table class="table table-borderless table-hover">
    <tbody>
      <% @process_claim.claim_remarks.where(coop: 1).order(created_at: :desc).each do |claim_remark| %>
        <tr>
          <td>
            <figure>
              <blockquote class="blockquote text-primary">
                <small><%= claim_remark.user %> <span class="badge rounded-pill bg-warning text-dark"><%= claim_remark.status.to_s.humanize %></span></small>
              </blockquote>
              <figcaption class="blockquote-footer">
                <cite title="Source Title"><%= claim_remark.created_at %></cite>
              </figcaption>
            </figure>
            <small> <%=  claim_remark.remark %> </small> </td>
          <td class="text-end">
            <%#= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_claim_remark_path(claim_remark), class: 'btn btn-outline-primary btn-sm', data: { turbo_frame: "remote_modal" } %>
            <%= link_to '<i class="bi bi-envelope-x"></i>'.html_safe, claim_remark, class: "text-secondary", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Do you want to delete this message?" } if current_user == claim_remark.user %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
