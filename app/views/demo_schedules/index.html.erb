<%= content_tag :h1, "List of Demo Schedules" %>
<div class="text-end mb-3">
  <%= link_to '<i class="bi bi-plus-square"></i> Add Schedule'.html_safe, new_demo_schedule_path, class: "btn btn-primary btn-sm" %>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Details</th>
      <th>Schedule</th>
      <th>Satus</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @demo_schedules.each do |demo_schedule| %>
      <tr>
        <th scope="row"><%= demo_schedule.id %></th>
        <td><strong><%= demo_schedule.cooperative %></strong> <br>
          <small><%= demo_schedule.name %> <br>
            <%= demo_schedule.contact_no %> | <%= demo_schedule.email %></small></td>
        <td><%= to_shortdate(demo_schedule.demo_date)  %> <br>
          <%= demo_schedule.time_slot.humanize %></td>
        <td><%= demo_schedule.status.humanize %></td>
        <td>
          <%= link_to 'View', demo_schedule, class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Edit', edit_demo_schedule_path(demo_schedule), class: 'btn btn-secondary btn-sm' %>
          <%= link_to "Delete", demo_schedule, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
