<%= content_tag :h1, "List of Branches" %>


<div class="text-end mb-3">
  <%= link_to new_branch_path, class: 'btn btn-primary' do %>
    New Branch
  <% end %>
</div>


  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
      <th>#</th>
            <th>Code</th>
            <th>Name</th>
            <th>Branch Code</th>
            <th>Approver</th>
            <th>Position</th>
            <th>Initials</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
      <% @branches.each do |branch| %>
        <tr>

        <th scope="row"><%= branch.id %></th>
        <td><%= branch.code %></td>
        <td><%= branch.name %></td>
        <td><%= branch.branch_code %></td>
        <td><%= branch.approver %></td>
        <td><%= branch.position %></td>
        <td><%= branch.initials %></td>
    
          <td>
            <%= link_to 'View', branch, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_branch_path(branch), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", branch, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
