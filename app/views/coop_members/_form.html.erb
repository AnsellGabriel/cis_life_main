
<%= simple_form_for(@coop_member, data: { controller: 'nested-form', nested_form_wrapper_selector_value: '.nested-form-wrapper' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
  <div class="form-inputs mb-3">
    <%= f.hidden_field :cooperative_id, value: @cooperative.id %>
    <div class="row">
      <div class="col-4">
        <%= f.association :coop_branch, collection: @cooperative.coop_branches %> 
      </div>
    </div>
    <div class="row">
      <div class="col-3">
       <%= f.input :last_name %>
      </div>
      <div class="col-3">
        <%= f.input :first_name %>
      </div>
      <div class="col-3">
        <%= f.input :middle_name %>
      </div>
      <div class="col-2">
        <%= f.input :suffix %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <%= f.input :birthdate, as: :date, html5: true %>
      </div>
      <div class="col-3">
        <%= f.input :birth_place %>
      </div>
      <div class="col-3">
        <%= f.input :email %>
      </div>
      <div class="col-3">
        <%= f.input :mobile_number %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.input :address %>
      </div>
      <div class="col-3">
        <%= f.input :sss_no %>
      </div>
      <div class="col-3">
        <%= f.input :tin_no %>
      </div>
    </div>
    <div class="row">
    <div class="col-3">
        <%= f.input :civil_status %>
      </div>
      <div class="col-3">
        <%= f.input :legal_spouse %>
      </div>
      <div class="col-3">
        <%= f.input :height %>
      </div>
      <div class="col-3">
        <%= f.input :weight %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <%= f.input :occupation %>
      </div>
      <div class="col-3">
        <%= f.input :employer %>
      </div>
      <div class="col-3">
        <%= f.input :work_address %>
      </div>
      <div class="col-3">
        <%= f.input :work_phone_number %>
      </div>
    </div>
  </div>

  <div class="form-actions text-end">
    <%= link_to "Back", coop_members_path, class: 'btn btn-secondary' %>
    <%= f.button :submit, class: 'btn-success' %>
  </div>
<% end %>
