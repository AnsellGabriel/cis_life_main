
<%= simple_form_for(@claim_attachment, url: url, method: meth) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%#= f.association :claim_type_document %>
    <%= f.hidden_field :process_claim_id  %>
    <%= f.hidden_field :claim_type_document_id  %>
    <%= content_tag :h5, @claim_type_document.document, class: "text-primary" %> <br>
    <%= f.file_field :doc %>
    <%#= f.input :status,collection: ClaimBenefit::Status, prompt: "Select a status" %>
  </div>
  <br>
  <div class="form-actions text-center">
    <%= f.button :submit, "Upload attachment", class: "btn btn-success" %>
  </div>
<% end %>
