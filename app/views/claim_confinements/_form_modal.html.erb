
<%= simple_form_for(@claim_confinement, url: url, method: meth) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :date_admit, label: "Date confine", as: :string, wrapper_html: { class: "col-md-6" }, 
              input_html: { data: { controller: "flatpickr",
                  flatpickr_max_date: Time.zone.now,
                  flatpickr_next_arrow: "Next",
                  flatpickr_prev_arrow: "Prev" } } %>
    <%= f.input :date_discharge, label: "Date confine", as: :string, wrapper_html: { class: "col-md-6" }, 
              input_html: { data: { controller: "flatpickr",
                  flatpickr_max_date: Time.zone.now,
                  flatpickr_next_arrow: "Next",
                  flatpickr_prev_arrow: "Prev" } } %>

    
    <%#= f.input :status,collection: ClaimBenefit::Status, prompt: "Select a status" %>
  </div>
  <br>
  <div class="form-actions text-end">
    <%= link_to "Back", :back, class: 'btn btn-secondary' %>
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
