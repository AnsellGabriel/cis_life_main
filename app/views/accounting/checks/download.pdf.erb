<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_stylesheet_link_tag "application" %>
    <%= wicked_pdf_stylesheet_link_tag "bootstrap" %>
  </head>
  <body>
    <%= render 'layouts/pdf_partials/cisp_header', title: "CHECK VOUCHER" %>
    <div class="row mb-2">
      <div class="col-8">
        <div class="row mb-1">
          <div class="col-2">
            <span>PAYEE</span>
          </div>
          <div class="col-1">
            <span class="text-end">:</span>
          </div>
          <div class="col-9">
            <span><%= @check.payable %></span>
          </div>
        </div>
        <div class="row">
          <div class="col-2">
            <span>ADDRESS</span>
          </div>
          <div class="col-1">
            <span class="text-end">:</span>
          </div>
          <div class="col-9">
            <span><%= @check.payable.get_address %></span>
          </div>
        </div>
      </div>
      <div class="col-4">
        <div class="row mb-1"><br></div>
        <div class="row text-end">
          <div class="col-2">
            <span>DATE</span>
          </div>
          <div class="col-1">
            <span class="text-end">:</span>
          </div>
          <div class="col-9">
            <span><%= date_as_month_day_year @check.date_voucher %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="mb-2" style="border: 1px solid black">
      <div class="row">
        <div class="col-9 text-center fw-bolder pt-1" style="height: 20px; border-right: 1px solid black; border-bottom: 1px solid black">P A R T I C U L A R S</div>
        <div class="col-3 text-center fw-bolder pt-1" style="height: 20px; border-bottom: 1px solid black">Amount</div>
      </div>
      <div class="row">
        <div class="col-9 pdf-cont" style="height: 150px; border-right: 1px solid black;"><p class="pdf-centered"><%= @check.particulars %></p></div>
        <div class="col-3 pdf-cont"><p class="pdf-centered text-center fw-bolder"><%= to_curr @check.amount %></p></div>
      </div>
      <div class="row" style="height: 10px; border-top: 1px solid black">
      </div>
      <div class="row" style="border-top: 1px solid black">
        <div class="col-6 row" style="height: 200px; border-right: 1px solid black">
          <div class="col-4" style="border-right: 1px solid black">
            <div class="text-center fw-bolder pt-1 mb-1" style="height: 20px; border-bottom: 1px solid black">CODE</div>
            <% @ledger_entries.each do |entry| %>
              <div class="ps-1 pt-1"><%= entry.id %></div>
            <% end %>
          </div>
          <div class="col-8">
            <div class="text-center fw-bolder pt-1" style="height: 20px; border-bottom: 1px solid black">ACCOUNT</div>
            <% @ledger_entries.each do |entry| %>
              <div class="<%= entry.debit? ? 'ps-1' : 'ps-5' %> pt-1"><%= entry.account %></div>
            <% end %>
          </div>
        </div>
        <div class="col-3" style="height: 200px; border-right: 1px solid black">
          <div class="row">
            <div class="text-center fw-bolder pt-1" style="height: 20px; border-bottom: 1px solid black">Debit</div>
          </div>
          <% @ledger_entries.each do |entry| %>
            <% if entry.debit? %>
              <div class="pe-1 pt-1 text-end"><%= to_curr entry.amount %></div>
            <% else %>
              <br>
            <% end %>
          <% end %>
        </div>
        <div class="col-3" style="height: 200px">
          <div class="row">
            <div class="text-center fw-bolder pt-1" style="height: 20px; border-bottom: 1px solid black">Credit</div>
          </div>
          <% @ledger_entries.each do |entry| %>
            <% if entry.credit? %>
              <div class="pe-1 pt-1 text-end"><%= to_curr entry.amount %></div>
            <% else %>
              <br>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-6 pe-2">
        <div class="row mb-1">
          <div class="col-3">
            <span>Check No.</span>
          </div>
          <div class="col-1">
            <span class="text-end">:</span>
          </div>
          <div class="col-8">
            <span><%= @check.voucher %></span>
          </div>
        </div>
        <div class="row mb-1">
          <div class="col-3">
            <span>Date</span>
          </div>
          <div class="col-1">
            <span class="text-end">:</span>
          </div>
          <div class="col-8">
            <span><%= date_as_month_day_year Date.today %></span>
          </div>
        </div>
        <div class="row mb-1" style="border: 1px solid black">
          <div class="col-4 small pt-1" style="height: 50px; border-right: 1px solid black">
            <div class="ps-1" style="border-bottom: 1px solid black">Prepared by:</div>
            <div class="ps-1 pt-2"><%= @accountant&.initials_name %></div>
          </div>
          <div class="col-4 small pt-1" style="height: 50px; border-right: 1px solid black">
            <div class="ps-1" style="border-bottom: 1px solid black">Certified Correct by:</div>
            <div class="ps-1 pt-2"><%= @certifier&.initials_name %></div>
          </div>
          <div class="col-4 small pt-1" style="height: 50px;">
            <div class="ps-1" style="border-bottom: 1px solid black">Audited by:</div>
            <div class="ps-1 pt-2"><%= @auditor&.initials_name %></div>
          </div>
        </div>
        <div class="mb-2">
          Approved by:
        </div>
        <div class="row">
          <div class="col-9"><%= @approver %></div>
          <div class="col-3 fw-bolder">CV <span style="color: maroon; font-size: 1.5rem"><%= @check.voucher %></span></div>
        </div>
      </div>
      <div class="col-6 p-1">
        <div class="row mb-5" style="line-height: 1.3">
          <span style="font-style: italic">Received from the </span><span class="fw-bolder">1 COOPERATIVE INSURANCE SYSTEM OF THE PHILIPPINES LIFE AND GENERAL INSURANCE</span> the sum of <span class="fw-bolder"><%= @amount_in_words %></span> (P <%= to_curr @check.amount %>) <span style="font-style: italic">PESOS as payment of the above account.</span>
        </div>
        <div class="text-center">
          Signature of payee
        </div>
      </div>
    </div>
  </body>
</html>