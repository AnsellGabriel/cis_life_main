<div class="<%= flex_justify_align('', 'center') %> gap-1 mb-3">
  <%= content_tag :h4, "Check Vouchers", class: 'text-primary mb-0' %>
  <%= link_to new_accounting_check_path, class: 'btn btn-sm btn-outline-primary', data: {turbo_frame: 'modal'} do %>
    <i class="bi bi-plus-lg"></i>
  <% end %>
</div>

<div class="<%= flex_justify_align('between','center') %> gap-3 mb-3">   
  <div class="d-flex gap-1">
    <%= search_form_for @q do |f| %>
      <div class="d-flex gap-1">
        <%= f.text_field :voucher_cont, class: 'form-control', placeholder: 'Search voucher' %>
        <%= button_tag(type: 'submit', class: small_btn('warning text-dark'), value: 'branches', style: 'width: 40px') do %>
          <i class='bi bi-search'></i>
        <% end %>
      </div>
    <% end %>

    <%= link_to accounting_checks_path, class: "btn btn-secondary", title: "Reload" do %>
      <i class="bi bi-arrow-clockwise"></i>
    <% end %>
  </div>

  <% if @pagy.pages > 1 %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
</div>


  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Voucher</th>
        <th class="text-center" style="min-width: 125px;">Date</th>
        <th>Payee</th>
        <th class="text-center">Amount</th>
        <th class="text-center">Status</th>
      </tr>
    </thead>

    <tbody>
      <% if @checks.present? %>
        <% @checks.each do |check| %>
          <tr>
            <td>
              <%= link_to "CV#{check.voucher}", check, class: 'text-primary', title: 'View'%>
            </td>
            <td class="text-center"><%= month_day_year(check.date_voucher) %></td>
            <td><%= check.payable %></td>
            <td class="text-end"><%= to_curr(check.amount) %></td>
            <td class="">
              <span class="<%= check.decorate.status_badge %>"><%= check.status.titleize %></span>
            </td>          
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="7" class="text-center">No check vouchers found.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
