<% case @request.payment_type %>
<% when "check_voucher" %>
  <%= link_to new_accounting_check_path(rid: params[:id]), class: 'btn btn-sm btn-primary', data: {turbo_frame: 'modal'}, title: "Generate Check Voucher" do %>
    <i class="bi bi-receipt-cutoff"></i>
    Generate
  <% end %>
<% when "debit_advice" %>
  <%= link_to new_accounting_debit_advice_path(rid: params[:id]), class: 'btn btn-sm btn-primary', data: {turbo_frame: 'modal'}, title: "Generate Debit Advice" do %>
    <i class="bi bi-receipt-cutoff"></i>
    Generate
  <% end %>
<% when "journal_voucher" %>
  <%= link_to new_accounting_journal_path(rid: params[:id]), class: 'btn btn-sm btn-primary', data: {turbo_frame: 'modal'}, title: "Generate Journal Voucher" do %>
    <i class="bi bi-receipt-cutoff"></i>
    Generate
  <% end %>
<% end %>