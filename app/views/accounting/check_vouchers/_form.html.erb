
<%= simple_form_for(accounting_check_voucher) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs mb-3">
    <div class="row">
      <div class="col-4">
        <%= f.input :voucher, input_html: { class: 'form-control'}, wrapper_html: { class: 'mb-3' } do %>
          <div class="input-group">
            <span class="input-group-text">CV</span>
            <%= f.text_field :voucher, class: 'form-control', placeholder: '00000' %>
          </div>
        <% end %>
      </div>

      <%= f.input :date_voucher, as: :string, input_html: {data: {
        controller: "flatpickr",
        flatpickr_max_date: Time.zone.now,
        flatpickr_next_arrow: "Next",
        flatpickr_prev_arrow: "Prev"}
        }, label: 'Voucher date', wrapper_html: {class: 'col-4'} 
      %>
      
      <%= f.input :amount, as: :text, wrapper_html: {class: 'col-4', data: {controller:"number-formatter"}}, input_html: {data: {number_formatter_target: 'input'}, class: 'form-control', style: 'height: 10px'} %>
    </div>
    <%= f.input :payable, collection: @cooperatives.map { |c| [c.name, [c.id, c.class.name]] }, as: :select, label: 'Payee', input_html: {data: { controller: "slim-select" }} %>
    <%= f.input :particulars %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class: small_btn('primary') %>
  </div>
<% end %>
