
<%= simple_form_for(journal) do |f| %>
  <div class="form-inputs mb-3">
    <div class="row">
      <div class="col-6">
        <%= f.input :date_voucher, as: :string, input_html: {data: {
          controller: "flatpickr",
          flatpickr_max_date: Date.today,
          flatpickr_next_arrow: "Next",
          flatpickr_prev_arrow: "Prev"}
          }, label: 'Voucher Date',
          input_html: {class: 'text-center'},
          error: '*Required'
        %>
      </div>
      <div class="col-6">
        <label class="form-label text required" for="accounting_journal_voucher">Voucher <abbr title="required">*</abbr></label>
        <%= f.input :voucher, wrapper: false, label: false, placeholder: '000-00-000', input_html: {class: 'text-center'}, error: '*Required' %>
      </div>
    </div>
    <%= f.input :global_payable, 
      collection: @payables, 
      label_method: :to_s, 
      value_method: :to_global_id, 
      label: 'Payee',
      input_html: {data: {controller: 'ts--select'}},
      error: '*Required'
     %>
    <%= f.input :particulars, error: '*Required' %>
    <% if @request.present? %>
      <%= f.hidden_field :requestable_type, value: @request.class.name %>
      <%= f.hidden_field :requestable_id, value: @request.id %>
    <% end %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>

