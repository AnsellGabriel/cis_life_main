<div class="<%= flex_justify_align('', 'center') %> gap-1 mb-3">
  <%= content_tag :h4, "For Journal Vouchers", class: 'text-primary mb-0' %>
</div>

<div class="<%= flex_justify_align('between','center') %> gap-3 mb-3">   
  <% if @pagy.pages > 1 %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
</div>


  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th class="text-center" style="min-width: 125px;">Voucher</th>
        <th class="text-center" style="min-width: 125px;">Date</th>
        <th>Payee</th>
        <th class="text-center">Particulars</th>
      </tr>
    </thead>

    <tbody>
      <% if @for_jv.present? %>
        <% @for_jv.each do |jv| %>
          <tr>
            <td class="text-center"> 
              <%= link_to jv.voucher, jv, class: 'text-primary', title: 'View'%>
            </td>
            <td class="text-center"><%= month_day_year(jv.date_voucher) %></td>
            <td><%= jv.payable %></td>
            <td class="">
              <%= jv.particulars %>
            </td>          
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="7" class="text-center">No debit advices found.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
