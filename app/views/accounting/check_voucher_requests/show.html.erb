<div class="">
  <%= link_to requests_accounting_checks_path, class: small_btn('secondary'), title: 'black' do %>
    <i class="bi bi-chevron-left"></i>
  <% end %>
  
  <% if @checks.first.cancelled? %>
    <%= link_to new_accounting_check_path(rid: params[:id]), class: 'btn btn-sm btn-primary', data: {turbo_frame: 'modal'}, title: "Generate Check Voucher" do %>
      <i class="bi bi-receipt-cutoff"></i>
      Generate Voucher
    <% end %>
  <% end %>
</div>

<div class="<%= flex_justify_align('between', 'center') %> gap-1 mb-1">
  <%= content_tag :h4, "Generated Vouchers", class: 'text-primary mb-0' %>
  <% if @pagy.pages > 1 %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
</div>
  <table class="table table-bordered table-hover bg-white table-sm">
    <thead class="table-dark">
      <tr>
        <th>Voucher</th>
        <th class="text-center" style="width: 8%; min-width: 110px">Date</th>
        <th>Payee</th>
        <th class="text-center">Amount</th>
        <th class="text-center">Status</th>
      </tr>
    </thead>

    <tbody>
      <% if @checks.present? %>
        <% @checks.each do |check| %>
          <tr>
            <td>
              <%= link_to "CV#{check.voucher}", check, class: 'text-primary', title: 'View'%>
            </td>
            <td class="text-center"><%= month_day_year(check.date_voucher) %></td>
            <td><%= check.payable %></td>
            <td class="text-end"><%= to_curr(check.amount) %></td>
            <td class="text-center">
              <span class="text-center <%= check.decorate.status_badge %>"><%= check.status.titleize %></span>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="7" class="text-center">No check vouchers found.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
