<%= turbo_frame_tag "modal" do %>
  <div class="modal-header">
    <%= content_tag :h5, 'Proof of Payment', class: "modal-title text-center", id: "staticBackdropLabel" %>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  
  <div class="modal-body">
    <%= form_with url: upload_receipt_accounting_debit_advice_path(@debit_advice), method: :post do |f| %>
      <%= f.label :file, "Upload debit advice proof of payment", class: "form-text" %>
      <div class="d-flex gap-1  mb-1 align-items-center">
          <%= f.file_field :file, class: "form-control", style: "width: 80%" %>
          <%= submit_tag 'Upload', class: "btn btn-sm btn-outline-primary" %>
      </div>
    <% end %>
  </div>
<% end %>