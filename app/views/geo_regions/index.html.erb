<%= content_tag :h1, "List of Geo Regions" %>


<div class="text-end mb-3">
  <%= link_to new_geo_region_path, class: 'btn btn-primary' do %>
    New Geo Region
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Name</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @geo_regions.each do |geo_region| %>
        <tr>

        <th scope="row"><%= geo_region.id %></th>
        <td><%= geo_region.name %></td>
    
          <td>
            <%= link_to 'View', geo_region, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_geo_region_path(geo_region), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", geo_region, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
