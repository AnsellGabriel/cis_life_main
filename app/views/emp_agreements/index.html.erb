<%= content_tag :h1, "List of Emp Agreements" %>


<div class="text-end mb-3">
  <%= link_to new_emp_agreement_path, class: 'btn btn-primary' do %>
    New Emp Agreement
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Employee</th>
        <th>Agreement</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @emp_agreements.each do |emp_agreement| %>
        <tr>

        <th scope="row"><%= emp_agreement.id %></th>
        <td><%= emp_agreement.employee %></td>
        <td><%= emp_agreement.agreement %></td>
    
          <td>
            <%= link_to 'View', emp_agreement, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_emp_agreement_path(emp_agreement), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", emp_agreement, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
