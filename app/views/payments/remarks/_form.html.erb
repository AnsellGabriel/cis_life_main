<%= simple_form_for(remark, url: payment_remarks_path) do |f| %>
  <div class="form-inputs mb-3">
    <%= f.input :remark, error: '*Required' %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, 'Add Remark', class: 'btn-danger', data: {turbo_confirm: "#{remark.remarkable.rejected? ? 'Add remark?' : 'Add remark and reject payment?'}", turbo_method: :get} %>
  </div>
<% end %>
