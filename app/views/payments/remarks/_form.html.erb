<%= simple_form_for(remark, url: payment_remarks_path) do |f| %>
  <div class="form-inputs mb-3">
    <%= f.input :remark, error: '*Required' %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, 'Reject', class: 'btn-danger', data: {turbo_confirm: 'Reject payment?', turbo_method: :get} %>
  </div>
<% end %>
