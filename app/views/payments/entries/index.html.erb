<%= content_tag :h1, "#{@payment.payable.name} Payment", class: 'mb-3' %>

<div class="d-flex gap-3 mb-2">
  <div class="card" style="width: 60%">
    <div class="card-header <%= flex_justify_align('between', 'center') %>">
      <div class="">
        <h3 class="badge bg-warning mb-0"><%= @payment.status.humanize %></h3>
      </div>
      <div class="<%= flex_justify_align('', 'center') %> gap-1 mb-1">
        <%= link_to @payment.receipt.url, class: 'btn btn-sm btn-outline-primary' do %>
          <i class="bi bi-cash"></i> Show Payment
        <% end %> 

        <%= link_to new_payment_remark_path(@payment), class: 'btn btn-sm btn-outline-danger', data: {turbo_frame: 'modal'} do %>
          <i class="bi bi-hand-thumbs-down"></i> Reject
        <% end %> 
      </div>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <span class="small fw-bold col-2">Payent date: </span>
        <span class="small col-10"><%= month_day_year(@payment.created_at) %></span>
      </div>

      <div class="row mb-3">
        <span class="small fw-bold col-2">Payee: </span>
        <span class="small col-10"><%= @payment.coop %></span>
      </div>

      <div class="row mb-3">
        <span class="small fw-bold col-2">Payment: </span>
        <span class="small col-10"><%= @payment.plan.acronym %></span>
      </div>

      <div class="row mb-3">
        <span class="small fw-bold col-2">Agent: </span>
        <span class="small col-10"><%= @payment.agent %></span>
      </div>
    </div>
  </div>

  <div class="card" style="width: 40%">
    <div class="card-body">
      <div class="<%= flex_justify_align('between') %>">
        <span class="small fw-bold">Details</span>
        <span class="small fw-bold">Amount</span>
      </div>
      <hr style="opacity: 1; border-color: black !important">
      <div class="<%= flex_justify_align('between') %>">
        <span class="small">Gross Premium</span>
        <span class="small"><%= to_curr(@payment.payable.gross_premium) %></span>
      </div>
      <hr>
      <div class="<%= flex_justify_align('between') %>">
        <span class="small">Service Fee</span>
        <span class="small">(<%= to_curr(@payment.payable.coop_commission) %>)</span>
      </div>
      <hr style="opacity: 1; border-color: black !important">
      <div class="<%= flex_justify_align('between') %>">
        <span class="small">Net Premium</span>
        <span class="small"><%= to_curr(@payment.payable.agent_commission + @payment.payable.net_premium) %></span>
      </div>
    </div>
  </div>

</div>

<%= link_to new_payment_entry_path(@payment), class: 'btn btn-sm btn-outline-success mb-3', data: {turbo_frame: 'modal'} do %>
  <i class="bi bi-plus-lg"></i> New OR
<% end %>   

<div class="">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="text-center">OR #</th>
        <th class="text-center">Date</th>
        <th class="text-center">Amount</th>
        <th class="text-center">Status</th>
      </tr>
    </thead>

    <tbody>
      <% if @entries.present? %>
        <% @entries.each do |entry| %>
          <tr>
            <td class="text-center">
              <%= link_to entry.or_no, payment_entry_path(@payment, entry), class: 'text-primary' %>
            </td>
            <td class="text-center">
              <%= month_day_year(entry.or_date) %>
            </td>
            <td class="text-end">
              <%= to_curr(entry.amount) %>
            </td>
            <td class="text-end">
              <%= to_curr(entry.status) %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="7" class="text-center">No entries found.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>