<%= turbo_frame_tag "modal-lg" do %>
  <div class="modal-header">
    <%= content_tag :h5, "New OR for #{@payment.payable.name} Payment", class: "modal-title text-center", id: "staticBackdropLabel" %>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  
  <div class="modal-body">
    <%= render "form", entry: @entry, payment: @payment %>
  </div>
<% end %>