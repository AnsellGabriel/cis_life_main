<div class="<%= flex_justify_align('', 'center') %> gap-1 mb-1">
  <%= link_to payment_path(@payment), class: 'btn btn-sm btn-secondary' do %>
    <i class="bi bi-arrow-90deg-left"></i>
  <% end %>

  <%= content_tag :h1, 'Receipt', class: 'mb-0' %>
</div>

<%= render 'cashier_entry', entry: @entry, coop: @coop, payment: @payment %>

<div class="card" style="margin-left: 35px;">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Ledger</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Billing Statements</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Payments</button>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <%= render 'ledger', ledgers: @ledgers, entry: @entry %>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
    </div>
  </div>
</div>
