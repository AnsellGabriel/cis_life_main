

<div class="p-5 mt-5 mb-4 rounded-3">
  <div class="row ">
    <div class="col-md-8">
      <div class="container-fluid py5">
        <%= image_tag 'cis_logo.png', width: 300, class: 'mb-lg-0 me-2' %>
        <h1 class="display-6 fw-bold mb-3">Efficiency and Productivity</h1>
        <p class=" fs-4">A disconnect between various departments of an organization can lead to lower quality of performance. If one subsystem makes a change to their share of data. other subsystems may have to catch up by physically keying in the update data to their respective data stores. </p>
      </div>
    </div>
    <div class="col-md-4 ">
      <div class="card shadow p-3 mb-5 bg-body rounded border-0">
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs mb-3">
              <div class="form-floating mb-3">
                <%= f.input :email, 
                  wrapper: false,
                  label: false,
                  required: false,
                  input_html: { autocomplete: "email" },
                  placeholder: 'Email' %>
                <%= f.label :email, 'Email', class: 'ms-1', style: 'opacity: 0.5' %>
              </div>
              <div class="form-floating mb-3">
                <%= f.input :password, 
                  wrapper: false,
                  label: false,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  placeholder: 'Password' %>
                <%= f.label :password, 'Password', class: 'ms-1', style: 'opacity: 0.5' %>
              </div>
            </div>
            <div class="form-actions mb-3">
              <%= f.button :submit, "Log in", class: "btn-primary w-100", style: 'background-color: #007bff !important;
    border-color: #007bff !important;', data: {turbo: false} %>
            </div>
          <% end %>
          
          <div class="text-center small mb-3">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?", new_password_path(resource_name), data: {turbo_frame: 'modal'}  %>
            <% end %>
          </div>
          <hr class="mb-3">
          <div class="text-center">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-success', data: {turbo_frame: 'modal'} %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
