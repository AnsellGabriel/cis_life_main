<h2>Register</h2>

<%= select_tag :category, options_for_select([['Select a role', '', {disabled: true, selected: true}],'Agent', 'Coop', 'Employee']), id: "formCategory", class: "form-select" %>

<div class="hidden" id="agentForm">
    <%= render "agents/form", agent: @agent %>
</div>

<div class="hidden" id="coopForm">
    <%= render "coops/form", agent: @coop %>
</div>

<div class="hidden" id="employeeForm">
    <%= render "employees/form", agent: @employee %>
</div>

<%= javascript_include_tag 'toggleForms' %>
<script type="module">
    toggleForms();
</script>





