<%= content_tag :h1, "List of Departments" %>


<div class="text-end mb-3">
  <%= link_to new_department_path, class: 'btn btn-primary' do %>
    New Department
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>

        <th scope="row"><%= department.id %></th>
    
          <td>
            <%= link_to 'View', department, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_department_path(department), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", department, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
