<%= content_tag :h1, "List of Coop Users" %>


<div class="text-end mb-3">
  <%= link_to new_coop_user_path, class: 'btn btn-primary' do %>
    New Coop User
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @coop_users.each do |coop_user| %>
        <tr>

        <th scope="row"><%= coop_user.id %></th>
    
          <td>
            <%= link_to 'View', coop_user, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_coop_user_path(coop_user), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", coop_user, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
