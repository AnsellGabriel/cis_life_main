<%= content_tag :h1, "List of Employee Teams" %>


<div class="text-end mb-3">
  <%= link_to new_employee_team_path, class: 'btn btn-primary' do %>
    New Employee Team
  <% end %>
</div>


  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
      <th>#</th>
            <th>Employee</th>
            <th>Team</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
      <% @employee_teams.each do |employee_team| %>
        <tr>

        <th scope="row"><%= employee_team.id %></th>
        <td><%= employee_team.employee %></td>
        <td><%= employee_team.team %></td>
    
          <td>
            <%= link_to 'View', employee_team, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_employee_team_path(employee_team), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", employee_team, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
