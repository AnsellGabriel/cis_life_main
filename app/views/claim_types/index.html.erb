<%= content_tag :h1, "List of Claim Types" %>


<div class="text-end mb-3">
  <%= link_to new_claim_type_path, class: 'btn btn-primary' do %>
    New Claim Type
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Claim Type</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @claim_types.each do |claim_type| %>
        <tr>

        <th scope="row"><%= claim_type.id %></th>
        <td><strong><%= claim_type.name %></strong> <br>
        <small><%= claim_type.description %></small></td>
    
          <td>
            <%= link_to 'View', claim_type, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_claim_type_path(claim_type), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", claim_type, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
