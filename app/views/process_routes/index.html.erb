<%= content_tag :h1, "List of Process Routes" %>


<div class="text-end mb-3">
  <%= link_to new_process_route_path, class: 'btn btn-primary' do %>
    New Process Route
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Name</th>
        <th>Department</th>
        <th>Description</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @process_routes.each do |process_route| %>
        <tr>

        <th scope="row"><%= process_route.id %></th>
        <td><%= process_route.name %></td>
        <td><%= process_route.department %></td>
        <td><%= process_route.description %></td>
    
          <td>
            <%= link_to 'View', process_route, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_process_route_path(process_route), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", process_route, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
