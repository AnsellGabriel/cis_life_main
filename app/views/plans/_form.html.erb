
<%= simple_form_for(@plan) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <%= f.input :name, wrapper_html: { class: "col-md-8" } %>
      <%= f.input :acronym, wrapper_html: { class: "col-md-4" } %>
    </div>
    <div class="row">
      <%= f.input :entry_age_from, wrapper_html: { class: "col-md-4" } %>
      <%= f.input :entry_age_to, wrapper_html: { class: "col-md-4" } %>
      <%= f.input :exit_age, wrapper_html: { class: "col-md-4" } %>
    </div>
    <div class="row">
      <%= f.input :min_participation, wrapper_html: { class: "col-md-4" } %>
      <%= f.input :description, wrapper_html: { class: "col-md-4" } %>
      <div class="form-check form-switch">
        <%= f.input :dependable, as: :boolean,wrapper_html: { class: "col-md-4" } %>
      </div>
    </div>
    <br>
    <div class="form-actions text-end">
      <%= link_to "Back", plans_path, class: "btn btn-secondary" %>
      <%= f.button :submit, class: "btn btn-success" %>
    </div>
  </div>
<% end %>
