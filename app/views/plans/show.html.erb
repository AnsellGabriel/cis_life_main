

<div class="card">
  <div class="card-header">
    <h1>Plan</h1>
    <%= link_to "Delete", @plan, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
  </div>
  <div class="card-body">
    <%= render @plan %>
  </div>
  <div class="card-footer">
    <%= link_to "Edit", edit_plan_path(@plan), class: "btn btn-secondary btn-sm" %> |
    <%= link_to "Back", plans_path, class: "btn btn-secondary btn-sm" %>
  </div>

</div>
