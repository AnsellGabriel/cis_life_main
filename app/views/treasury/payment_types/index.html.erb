
<div class="<%= flex_justify_align('between', 'center') %> mb-3" style="width: 700px">
  <div class="<%= flex_justify_align('', 'center') %> gap-1">
    <%= content_tag :h4, "Payment Types", class: 'text-primary' %>

    <%= link_to new_treasury_payment_type_path, class: small_btn('primary') do %>
      New
    <% end %>
  </div>
  <%= search_form_for @q do |f| %>
    <div class="d-flex gap-1">
      <%= f.search_field :name_cont, class: 'form-control', placeholder: 'Name' %>
      <%= f.submit 'Search', class: 'btn-sm btn btn-warning' %>
    </div>
  <% end %>
</div>

<div class="mb-1">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>

<table class="table table-striped table-bordered table-hover" style="width: 700px">
  <thead>
    <tr>
      <th class="" style="width: 10%">#</th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @treasury_payment_types.each do |pt| %>
      <tr>
        <th scope="row"><%= pt.id %></th>
        <td>
          <%= pt.name %>
          <%= link_to edit_treasury_payment_type_path(pt), class: 'btn btn-outline-primary btn-sm', title: 'Edit' do %>
            <i class="bi bi-pencil"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
