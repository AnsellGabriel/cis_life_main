
<%= simple_form_for(check, url: treasury_checks_path)  do |f| %>

  <div class="form-inputs mb-3">
    <div class="row">
      <div class="col-6">
        <%= f.input :check_date, as: :string, input_html: {data: {
          controller: "flatpickr",
          flatpickr_max_date: Date.today,
          flatpickr_next_arrow: "Next",
          flatpickr_prev_arrow: "Prev"}
          }, label: 'Check Date'
        %> 
      </div>
      <div class="col-6">
        <%= f.input :check_number %>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <%= f.input :amount %>
      </div>
      <div class="col-6">
        <%= f.input :check_type, as: :select, collection: Treasury::BusinessCheck.check_types.map {|k, v| [k.humanize.capitalize, k.to_s]} %>
      </div>
    </div>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, 'Add Business Check', class: 'btn-primary' %>
  </div>
<% end %>
