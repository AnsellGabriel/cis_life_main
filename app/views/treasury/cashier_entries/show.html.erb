<div class="mb-1">
  <%= link_to treasury_cashier_entries_path, class: small_btn("outline-secondary") do %>
    <i class="bi bi-arrow-left-square"></i>
    Back
  <% end %>
</div>

<%= render 'payments/entries/cashier_entry', entry: @entry, coop: @coop, payment: @payment %>

<div class="card">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Ledger</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Billing Statements</button>
    </li>
    <!--
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Payments</button>
    </li>
    -->
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <%= render 'payments/entries/ledger', ledgers: @ledgers, entry: @entry %>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <%= render 'payments/entries/billing_statement', bills: @bills, entry: @entry %>
    </div>
    <!--
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
    </div>
    -->
  </div>
</div>