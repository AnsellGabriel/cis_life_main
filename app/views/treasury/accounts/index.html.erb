<div class="<%= flex_justify_align('between', 'center') %> mb-1">
  <div class="<%= flex_justify_align('', 'center') %> gap-3">
    <%= content_tag :h4, "Accounts", class: 'text-primary' %>
    <% if current_user.is_treasurer? %>
      <%= link_to new_treasury_account_path, class: small_btn('primary'), data: {turbo_frame: 'modal'} do %>
        New Account
      <% end %>
    <% end %>
  </div>

  <div class="">
    <%= search_form_for @q do |f| %>
      <div class="form-group d-flex gap-1">
        <%= f.search_field :name_or_code_cont, placeholder: "Account name", class: "form-control" %>
        <%= f.submit "Search", class: small_btn('warning text-dark') %>
      </div>
    <% end %>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Account</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @treasury_accounts.each do |account| %>
      <tr>
        <th scope="row"><%= account.code %></th>
        <td><%= account.name %></td>
        <td class="text-center">
          <%= link_to 'View', account, class: 'btn btn-primary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
