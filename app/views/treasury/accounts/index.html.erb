<div class="<%= flex_justify_align('between', 'center') %> mb-3">
  <div class="<%= flex_justify_align('', 'center') %> gap-3">
    <%= content_tag :h4, "Accounts", class: 'text-primary' %>
    <%= link_to new_treasury_account_path, class: small_btn('primary'), data: {turbo_frame: 'modal'} do %>
      New Account
    <% end %>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Type</th>
      <th>Address</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @treasury_accounts.each do |account| %>
      <tr>

        <th scope="row"><%= account.id %></th>
        <td><%= account.name %></td>
        <td><%= account.account_type.humanize %></td>
        <td><%= account.address %></td>

        <td>
          <%= link_to 'View', account, class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Edit', edit_treasury_account_path(account), class: 'btn btn-secondary btn-sm' %>
          <%= link_to "Delete", account, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
