<div class="<%= flex_justify_align('between', 'center') %> mb-1">
  <div class="<%= flex_justify_align('', 'center') %> gap-1">
    <%= content_tag :h4, "Accounts", class: 'text-primary' %>
    <%= link_to 'Add', new_treasury_account_path, class: small_btn('outline-primary'), data: {turbo_frame: 'modal'} %>
  </div>

  <div class="<%= flex_justify_align('center') %> gap-1">
    <%= search_form_for @q do |f| %>
      <div class="form-group d-flex gap-1">
        <%= f.search_field :name_or_code_cont, placeholder: "Account name", class: "form-control filter_field" %>
        <%= f.submit "Search", class: small_btn('warning text-dark filter_btn') %>
      </div>
    <% end %>

    <%= link_to treasury_accounts_path, class: 'btn-sm btn btn-secondary filter_btn' do %>
      <i class="bi bi-arrow-clockwise"></i>
    <% end %>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Account</th>
    </tr>
  </thead>

  <tbody>
    <% @treasury_accounts.each do |account| %>
      <tr>
        <th scope="row"><%= account.code %></th>
        <td>          
          <%= link_to account.name, account %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
