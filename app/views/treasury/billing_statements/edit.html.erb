<%= turbo_frame_tag "modal" do %>
  <div class="modal-header">
    <%= content_tag :h5, "Edit Billing Statement #{@group_remit.present? ? "for #{@group_remit.agreement.moa_no}" : ''}", class: "modal-title text-center", id: "staticBackdropLabel" %>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  
  <div class="modal-body">
    <%= render "form", bill: @bill, entry: @entry %>
  </div>
<% end %>