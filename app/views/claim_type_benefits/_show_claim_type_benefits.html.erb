            <%= link_to '<i class="bi bi-trash3"></i>'.html_safe, ben,  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
