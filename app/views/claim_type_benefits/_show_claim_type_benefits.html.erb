<table class="table table-borderless table-hover">
  <thead>
    <tr class="border-top border-bottom border-primary">
      <%# <th class="text-primary">ID</th> %>
      <th>Benefits</th>
      <th>
      <div class="text-center">
      <%= link_to '<i class="bi bi-plus-square"></i> Add Benefit'.html_safe, new_claim_type_benefit_path(p: @claim_type), class: "btn btn-primary btn-sm", data: { turbo_frame: "remote_modal" } %></th>
