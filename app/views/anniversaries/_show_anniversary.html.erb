
<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Anniversary Date</th>
        <th>
          <div class="text-center">
            <%= link_to new_anniversary_path(v: a), class: 'btn btn-sm btn-primary', data: { turbo_frame: "remote_modal" } do %>
              Add Anniversary
            <% end %>
          </div>
        </th>
      </tr>
    </thead>
    <tbody>
      <% a.anniversaries.each do |anniversary| %>
        <tr>
          <td><%= anniversary.name %></td>
          <td><%= anniversary.anniversary_date %></td>
          <td class="text-center">
            <%#= link_to 'View', anniversary, class: 'btn' %>
            <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_anniversary_path(anniversary), class: 'btn btn-secondary btn-sm',  data: { turbo_frame: "remote_modal" } %>
            <%= link_to '<i class="bi bi-trash3"></i>'.html_safe, anniversary,  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
