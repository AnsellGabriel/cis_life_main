<%= content_tag :h1, "List of Agent Groups" %>


<div class="text-end mb-3">
  <%= link_to new_agent_group_path, class: 'btn btn-primary' do %>
    New Agent Group
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @agent_groups.each do |agent_group| %>
        <tr>

        <th scope="row"><%= agent_group.id %></th>
    
          <td>
            <%= link_to 'View', agent_group, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_agent_group_path(agent_group), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", agent_group, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
