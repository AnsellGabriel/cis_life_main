<%= content_tag :h1, "List of Coop Types" %>


<div class="text-end mb-3">
  <%= link_to new_coop_type_path, class: 'btn btn-primary' do %>
    New Coop Type
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Details</th>

      </tr>
    </thead>

    <tbody>
      <% @coop_types.each do |coop_type| %>
        <tr>

        <th scope="row"><%= coop_type.id %></th>
        <td><strong><%= coop_type.name %></strong> <br>
        <small><%= coop_type.description %></small><br>
         <%= link_to 'View', coop_type, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_coop_type_path(coop_type), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", coop_type, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
        </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
