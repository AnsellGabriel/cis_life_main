<div id="<%= dom_id process_coverage %>">
  <div class="row mb-3">
    <div class="col-6">

      <%= content_tag :p do %>
        <strong>Group remit:</strong>
        <%= process_coverage.group_remit %>
      <% end %>
      
      <%= content_tag :p do %>
        <strong>MOA:</strong>
        <%= link_to process_coverage.group_remit.agreement.moa_no, agreement_path(id: process_coverage.group_remit.agreement) %>
        <%#= link_to process_coverage.group_remit.agreement.moa_no, agreement_path(id: process_coverage.group_remit.moa,for_modal: "yes"), data: { turbo_frame: "remote_modal" } %>
      <% end %>

      <%= content_tag :p do %>
        <strong>Agent:</strong>
        <%= process_coverage.agent %>
      <% end %>
      
      <%= content_tag :p do %>
        <strong>Effectivity:</strong>
        <%= process_coverage.effectivity %> |
        <strong>Expiry:</strong>
        <%= process_coverage.expiry %>
      <% end %>

      <%= content_tag :p do %>
        <strong>Regular Count:</strong>
        <%= @batches_o.where(age: 18..65).count %> |
        <strong>Overage Count:</strong>
        <%= @batches_o.where(age: 66..).count %>
      <% end %>

      <%= content_tag :p do %>
        <strong>Minimum Participation:</strong>
        <%= num_delimit(@process_coverage.group_remit.agreement.proposal.minimum_participation) %> |
        <strong>Enrolled:</strong>
        <%= num_delimit(@process_coverage.group_remit.batches.count) %> 
      <% end %>
      
      <%= content_tag :p do %>
        <strong>No Birthdate:</strong>
        <%= @process_coverage.group_remit.batches.where(age: ..0).count %>
      <% end %>
      
      <%= content_tag :p do %>
        <% unless @life_cov.nil? %>
          <strong>Life Coverage:</strong>
          <%= to_currency(@life_cov) %> |
        <% end %>
        <strong>Status:</strong>
        <%= process_status(@process_coverage.status) %>
      <% end %>


      <% unless process_coverage.status == "approved" || process_coverage.status == "denied" || process_coverage.status == "pending" || process_coverage.group_remit.batches.where(insurance_status: 2..3).count == 0  %>
        <%= link_to new_process_remark_path(ref: process_coverage, pro_status: "Approve", rem_status: "Approved"), title: "Approve", class: "btn btn-sm btn-success mb-2 me-2", data: { turbo_frame: "remote_modal" } do %>
          <%= bootstrap_icon "check-lg" %> Approve
        <% end %>
        <%= link_to new_process_remark_path(ref: process_coverage, pro_status: "Deny", rem_status: "Denied"), title: "Denied", class: "btn btn-sm btn-danger mb-2", data: { turbo_frame: "remote_modal" } do %>
          <%= bootstrap_icon "x-lg" %> Deny
        <% end %>
      <% end %>
      
    </div>
    
    <div class="col-6">
      <%= render "process_remarks", process_remarks: @filtered_remarks, process_coverage: process_coverage %>
    </div>
  </div>

  
  <% insured_types = @insured_types.pluck(:insured_type) %>
  <% unless insured_types.any?{ |element| (2..9).include?(element) } %>
    <div class="row mb-3">
      <div class="col-4">
        <div class="card text-white bg-secondary">
          <div class="card-header">
            Coverage Summary
          </div>
          <div class="card-body">
            <%= content_tag :p do %>
              <%= content_tag :strong, "No. of Covered: " %>
              <%= number_with_delimiter(process_coverage.group_remit.batches.count) %>
            <% end %>
    
            <%= content_tag :p do %>
              <%= content_tag :strong, "Total Coverages (Active): " %>
              <%= to_currency(total_cov_active = @life_cov * @process_coverage.group_remit.batches.count) %>
            <% end %>
            <%= content_tag :p do %>
              <%= content_tag :strong, "Total Premium (Active): " %>
              <%= to_currency(process_coverage.group_remit.batches.where(active: true).sum(:premium)) %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-4">
        <div class="card text-white bg-success">
          <div class="card-header">
            Approved Coverage
          </div>
          <div class="card-body">
            <%= content_tag :p do %>
              <%= content_tag :strong, "No. of Approved: " %>
              <%= number_with_delimiter(process_coverage.approved_count) %>
            <% end %>
            <%= content_tag :p do %>
              <%= content_tag :strong, "Total Approved Coverages: " %>
              <%= to_currency(total_cov_active = @life_cov * process_coverage.approved_count) %>
            <% end %>
            <%= content_tag :p do %>
              <%= content_tag :strong, "Total Approved Premium: " %>
              <%= to_currency(process_coverage.group_remit.batches.where(insurance_status: "approved").sum(:premium)) %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-4">
        <div class="card text-white bg-danger">
          <div class="card-header">
            Denied Coverage
          </div>
          <div class="card-body">
            <%= content_tag :p do %>
              <%= content_tag :strong, "No. of Denied: " %>
              <%= number_with_delimiter(process_coverage.denied_count) %>
            <% end %>
            <%= content_tag :p do %>
              <%= content_tag :strong, "Total Denied Coverages: " %>
              <%= to_currency(total_cov_active = @life_cov * process_coverage.denied_count) %>
            <% end %>
            <%= content_tag :p do %>
              <%= content_tag :strong, "Total Denied Premium: " %>
              <%= to_currency(process_coverage.group_remit.batches.where(insurance_status: "denied").sum(:premium)) %>
            <% end %>
          </div>
        </div>
      </div>

    </div>

    <% else %>

      <div class="row">
        <% batches = process_coverage.group_remit.batches %>
        <% @insured_types.each do |type| %>
        <% batch_deps = process_coverage.get_batch_dep(type) %>
          <%# ctr = batches.joins(:batch_dependents).where(batch_depedents: { proposal_insured }) %>
          <div class="col-xl-4 mb-2">
            <div class="card mb-2">
              <div class="card-header">
                <%= content_tag :span, type.name, class: "lead" %>
              </div>
              <div class="card-body">
                <% life_cov = type.proposal_insured_benefits.find_by(benefit_id: 1).cov_amount %>
                <div class="row">
                  <div class="col">
                    <p>Life: <b><%= to_currency(life_cov) %></b></p>
                  </div>
                  <div class="col">
                    <p>Premium: <b><%= to_currency(type.total_prem) %></b></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <p>Total Coverage: <b><%= to_currency(batch_deps * life_cov) %></b></p>
                  </div>
                  <div class="col">
                    <p>For Review: <b><%= process_coverage.group_remit.batches.joins(:batch_dependents).where(batch_dependents: { proposal_insured: type }, insurance_status: "For Review").count %></b></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col text-success">
                    <p>Approved: <b><%= process_coverage.group_remit.batches.joins(:batch_dependents).where(batch_dependents: { proposal_insured: type }, insurance_status: "Approved").count %></b></p>
                  </div>
                  <div class="col text-secondary">
                    <p>Pending: <b><%= process_coverage.group_remit.batches.joins(:batch_dependents).where(batch_dependents: { proposal_insured: type }, insurance_status: "Pending").count %></b></p>
                  </div>
                  <div class="col text-danger">
                    <p>Denied: <b><%= process_coverage.group_remit.batches.joins(:batch_dependents).where(batch_dependents: { proposal_insured: type }, insurance_status: "Denied").count %></b></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

  <% end %>
  

  <%== pagy_bootstrap_nav(@pagy_batch) if @pagy_batch.pages > 1 %>

  <%#= content_tag :span, process_coverage.group_remit.agreement %>
  <div class="row">
    <div class="col-4">
      <div class="links mb-2">
        <%= link_to "18-65", process_coverage_path(process_coverage, search: "regular"), class: "btn btn-outline-primary"  %>
        <%= link_to "Overage", process_coverage_path(process_coverage, search: "overage"), class: "btn btn-outline-warning"  %>
        <%= link_to "w/ Health Dec", process_coverage_path(process_coverage, search: "health_decs"), class: "btn btn-outline-secondary"  %>
        <%= link_to "View All", process_coverage_path(process_coverage), class: "btn btn-outline-success"  %>
      </div>
    </div>
    <div class="col-4">
      <div class="links mb-2">
       <% @insured_types.each do |type| %>
        <%# unless type.insured_type.id == 2..5 %>
        <% unless type.insured_type == 2..5 %>
          <%= link_to type.name, process_coverage_path(process_coverage, insured_type_id: type.id), class: "btn btn-primary btn-sm mb-2" %>
        <% end %>
       <% end %>
      </div>
    </div>
    <div class="col-4">
      <% unless process_coverage.group_remit.batches.where(insurance_status: "for_review").count == 0 %>
        <%#= link_to "Approve All", approve_all_group_remit_batches_path(process_coverage: process_coverage), class: "btn btn-success" %>
        <%= link_to "Approve All", approve_all_group_remit_batches_path(@group_remit,group_remit: process_coverage.group_remit, process_coverage: process_coverage), class: "btn btn-success", onclick: "return confirm('Are you sure?')", method: :get %>
        <%#= button_to "Approve All", approve_all_group_remit_batches_path(@group_remit,group_remit: process_coverage.group_remit, process_coverage: process_coverage), class: "btn btn-success", data: {turbo_confirm: 'Approve all batches?' }  %>
      <% end %>

    </div>
  </div>
  

  <table class="table border-dark">
    <thead class= "table-dark">
    <!-- <th></th> -->
      <th>Member</th>
      <th>Terms</th>
      <th>Premium</th>
      <th>Insurance Status</th>
      <th>Dependent(s)</th>
      <th>Health Dec Answers</th>
      <th>Action</th>
      <th>Remarks</th>
    </thead>
    <tbody>
      <%# group_remit.batches.each do |batch| %>
      <% unless @filtered_batches.count == 0 %>
        <%#= form_tag approve_selected_batches_path, method: :patch do %>
        <% @filtered_batches.each do |batch| %>

          <% mem_bday = batch.coop_member.member.birth_date %>
          <% effect = batch.group_remit.effectivity_date %>
          <% expire = batch.group_remit.expiry_date %>

          <% if mem_bday.nil? %>
            <% mem_age = "" %>
          <% else %>
            <% mem_age = batch.age %>
          <% end %>
          
          <tr>
            <!--<td><%#= check_box_tag "ids[]", batch.id %></td> -->
            <td>
              <%= link_to batch.coop_member.member, batch.coop_member.member, class: "link-primary", data: { turbo_frame: "remote_modal" } %> <%= content_tag :small, "Age: #{mem_age}" %> <br>
              <%= content_tag :small, mem_bday.nil? ? "No Birthday" : "Birthday: #{mem_bday.strftime('%b-%d-%Y')}", class: "text-secondary" %> <br>
              <%= batch_status(batch.status) %>  <br>
              <%= insured_type(batch.agreement_benefit.insured_type, batch.agreement_benefit.insured_type) %>
            </td>
            <td>
              <% terms = (batch.group_remit.expiry_date.year * 12 + batch.group_remit.expiry_date.month) - (effect.year * 12 + effect.month) %>
              
              <%= process_dates("Eff", effect) %> <br>
              <%= process_dates("Exp", expire) %> <br>
              <%= process_dates("Terms", terms) %><br>
            </td>
            <td>
              <div class="row">
                <%= process_premiums("Premium", batch.premium)%>
              </div>
              <div class="row">
                <%= process_premiums("Agent's SF", batch.agent_sf_amount) %>
              </div>
              <div class="row">
                <%= process_premiums("Coop's SF", batch.coop_sf_amount) %>
              </div>
              <div class="row">
                <%= process_premiums("Net Prem", (batch.premium - (batch.coop_sf_amount + batch.agent_sf_amount))) %>
              </div>
            </td>
            <td>
              <%= insurance_status(batch.insurance_status) %>
            </td>
            <td>
              <% batch.batch_dependents.each do |dep| %>
                <%= content_tag :small do %>
                  <%= link_to "#{dep.member_dependent} (#{dep.proposal_insured.insured_type.name}) - #{to_currency(dep.premium)}", dep, remote: true, data: { turbo_frame: "remote_modal" } %> <br>
                <% end %>
              <% end %>
            </td>
            <td>
              <% if batch.batch_health_decs %>
                <% batch.batch_health_decs.where(answerable_type: "HealthDec").each do |bhd| %>
                  <%= health_dec_answer(bhd.answer) %> <br>
                <% end %>
              <% end %>
            </td>
            <td>
              <% unless process_coverage.status != "for_process" && process_coverage.status != "pending" %>
                <% unless batch.insurance_status != "for_review" %>
                  <%#= link_to approve_batch_process_coverage_path(batch: batch), title: "Approve", class: "btn btn-sm btn-success" do %>
                    <%#= bootstrap_icon "check-lg" %>
                  <%# end %>
                  <%#= link_to deny_batch_process_coverage_path(batch: batch), title: "Deny", class: "btn btn-sm btn-danger" do %>
                    <%#= bootstrap_icon "x-lg" %>
                  <%# end %>
                  <%= link_to approve_batch_process_coverage_path(batch: batch), title: "Approve", class: "btn btn-sm btn-success mb-1" do %>
                    <%= bootstrap_icon "check-lg" %>
                  <% end %>
                  <%= link_to new_batch_remark_path(ref: batch, pro_cov: process_coverage, batch_status: "Pending"), title: "Pending", class: "btn btn-sm btn-secondary mb-1", data: { turbo_frame: "remote_modal" } do %>
                    <%= bootstrap_icon "dash-lg" %>
                  <% end %>
                  <%= link_to new_batch_remark_path(ref: batch, pro_cov: process_coverage, batch_status: "Deny"), title: "Deny", class: "btn btn-sm btn-danger mb-1", data: { turbo_frame: "remote_modal" } do %>
                    <%= bootstrap_icon "x-lg" %>
                  <% end %>
                <% end %>
                <% if batch.batch_health_decs.present? %>
                  <%#= link_to batch_health_dec_path(id: batch.batch_health_dec.id, b_id: batch.batch_health_dec, for_modal: "yes", pro_id: process_coverage), title: "For MD Review", class: "btn btn-sm btn-warning mb-1", remote: true, data: { turbo_frame: "remote_modal" } do %>
                  <%#= link_to group_remit_batch_health_declaration_path(@group_remit,batch,group_remit: @group_remit, batch: batch,id: batch.batch_health_decs.id, b_id: batch.batch_health_decs, for_modal: "yes", pro_id: process_coverage), title: "For MD Review", class: "btn btn-sm btn-warning mb-1", remote: true, data: { turbo_frame: "remote_modal" } do %>
                  <%= link_to health_dec_group_remit_batch_path(@group_remit, batch, for_und: true), class: "btn btn-sm btn-warning mb-1", data: { turbo_frame: "modal-xl" } do %>
                    <%= bootstrap_icon "file-earmark-medical" %>
                  <% end %>
                <% end %>
              <% end %>
            </td>
            <td>
              <% if batch.batch_remarks.count == 0 %>
                <%= content_tag :small, "No Remarks" %>
              <% else %>              
                <%= link_to "View Remarks", modal_remarks_process_coverage_path(process_coverage, batch: batch), data: { turbo_frame: "remote_modal" } %>
              <% end %>
              
            </td>
          </tr>
        <% end %>
        <%# end %>

        <% else %>
          <tr class="text-center">
            <td colspan=8>
              <%= content_tag :span, "NO RECORD(S)", class: "lead fw-bold" %>
            </td>
          </tr>
      <% end %>
        
    </tbody>
  </table>

</div>
