<%= turbo_frame_tag "reg_form_modal" do %>
  <div class="modal-header">
    <%= content_tag :h5, 'Adjust Coverage', class: "modal-title", id: "staticBackdropLabel" %>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>

  <div class="modal-body">
   
    <%= simple_form_for @process_coverage, url: update_batch_cov_process_coverage_path(), method: :post do |f| %>
      <%= f.input :batch, input_html: { value: @batch.id }, as: :hidden %>
      <%= f.input :loan_amount, label: "Input adjusted amount" %>
      
      <%= f.button :submit, "Adjust", data: { turbo: false }, class: "btn btn-sm btn-success" %>
    <% end %>
  </div>
<% end %>

