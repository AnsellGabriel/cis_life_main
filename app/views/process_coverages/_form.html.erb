
<%= simple_form_for(@process_coverage) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs mb-3">
    <%= f.association :group_remit %>
    <%= f.association :agent %>
    <div class="row">
      <%= f.input :effectivity, as: :string, wrapper_html: { class: "col-6" }, input_html: { data: { controller: "flatpickr",
            flatpickr_max_date: Time.zone.now,
            flatpickr_next_arrow: "Next",
            flatpickr_prev_arrow: "Prev" } } %>
      <%= f.input :expiry, as: :string, wrapper_html: { class: "col-6" }, input_html: { data: { controller: "flatpickr",
          flatpickr_min_date: Time.zone.now,
          flatpickr_next_arrow: "Next",
          flatpickr_prev_arrow: "Prev" } } %>
    </div>
    
  </div>

  <div class="form-actions text-end">
    <%= link_to "Back", process_coverages_path, class: 'btn btn-secondary' %>
    <%= f.button :submit, class: 'btn-success' %>
  </div>
<% end %>
