
<% batch.batch_remarks.order(created_at: :desc).each do |rem| %>
  <%= content_tag :div, class: "d-flex justify-content-between align-items-center" do %>
    <%= content_tag :p, class: "mb-1" do %>
      <%= rem.user %> <%= content_tag :small, "- #{time_ago_in_words(rem.created_at)} ago" %> <%= batch_rem_status(rem.status) %>
    <% end %>
  <% end %>
  <%= content_tag :p, rem.remark, class: "small mb-0 fst-italic" %>

  <%= content_tag :hr %>
<% end %>