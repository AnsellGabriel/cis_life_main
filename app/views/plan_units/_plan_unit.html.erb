<div id="<%= dom_id plan_unit %>">
  <p>
    <strong>Plan:</strong>
    <%= plan_unit.plan %> <small>(<%= plan_unit.plan.acronym%>)</small>
  </p>

  <p>
    <strong>Name:</strong>
    <%= plan_unit.name %>
  </p>



  <table class="table">
    <thead>
      <th>Benefits</th>
      <th>Coverage Amount</th>
    </thead>
    <tbody>

      <% plan_unit.unit_benefits.each do |ub| %>
        <tr>
          <td><%= ub.benefit.name %></td>
          <td><%= to_currency(ub.coverage_amount) %></td>
        </tr>
      <% end %>

    </tbody>
  </table>

  <p>
    <strong>Total premium:</strong>
    <%= to_currency(plan_unit.total_prem) %>
  </p>

</div>
