  <% elsif plan_unit.plan_id == 8 %> <!-- SII -->
    <div class="card-body">
      <h5 class="card-title fst-italic">SALIENT FEATURES:</h5>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>Insurable Age</td>
            <td><b>18-65 years old</b></td>
          </tr>
          <tr>
            <td>Minimum Participation</td>
            <td><b>100 individual members</b></td>
          </tr>
          <tr>
            <td>Maximum Coverage</td>
            <td><b><%= to_currency(300000) %></b></td>
