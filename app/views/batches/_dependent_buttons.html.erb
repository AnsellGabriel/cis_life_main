<% if dependent.dependent_remarks.exists? %>
  <%= link_to dependent_remarks_path(batch_dependent_id: dependent.id, 
    group_remit_id: group_remit.id, 
    batch_id: batch.id, coop: true), 
    class: small_btn('warning'),
    title: 'Remarks', 
    data: {turbo_frame: "modal"} do %>
    <i class="bi bi-card-list"></i>
  <% end %>
<% end %>

<% if (group_remit.pending? || group_remit.for_renewal?) && group_remit.instance_of?(Remittance) && !batch.terminated? %>     

  <% if (batch.recent? || batch.for_reconsideration?) && dependent.dependent_health_decs.blank? %>
    <%= link_to new_group_remit_batch_dep_health_declaration_path(group_remit, batch, batch_dependent_id: dependent.id),
      class: small_btn('warning'), 
      title: 'Health Declaration Form',
      data: { turbo_frame: "modal-xl" } do %> 
      <i class="bi bi-file-earmark-medical"></i>
    <% end %>
  <% end %>

  <%= button_to group_remit_batch_dependent_path(group_remit, batch, dependent), 
    method: :delete,
    form: { 
    data: { turbo_frame: "_top", 
    turbo_confirm: "Delete dependent?" } 
    }, 
    title: 'Remove dependent',
    class: small_btn('danger'),
    style: "font-size: .8rem" do %>
    <i class="bi bi-x-lg"></i>
  <% end %>

<% end %>

