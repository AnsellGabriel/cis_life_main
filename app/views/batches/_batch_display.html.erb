<div class="col-md-8">
  <div class="card mb-3">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-3">
          <h6 class="mb-0">Member:</h6>
        </div>
        <div class="col-sm-9">
          <%= link_to "#{batch_member.member.last_name}, #{batch_member.member.first_name} #{batch_member.member.middle_name}", coop_member_path(batch_member.id) %>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm">
          <h6 class="mb-0">Effectivity date:</h6>
        </div>
        <div class="col-sm text-secondary">
          <%= @effectivity_date.strftime('%B %d, %Y') %>
        </div>
        <div class="col-sm">
          <h6 class="mb-0">Expiry date:</h6>
        </div>
        <div class="col-sm text-secondary">
          <%= @expiry_date.strftime('%B %d, %Y') %>
        </div>
      </div>
      <hr class="mb-3">
      <div class="row">
        <div class="col-sm-3">
          <h6 class="mb-0">Coop Commission</h6>
        </div>
        <div class="col-sm-3 text-secondary">
          <%= number_to_currency(batch.coop_sf_amount, unit: "â‚±", precision: 2) %>
        </div>
        <div class="col-sm-3">
          <h6 class="mb-0">Status</h6>
        </div>
        <div class="col-sm-3 text-secondary">
          <%= batch.status == 'recent' ? 'New' : batch.status.to_s.titleize %>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-3">
          <h6 class="mb-0">Active?</h6>
        </div>
        <div class="col-sm-3 text-secondary">
          <%= batch.active ? "Active" : "Inactive" %>
        </div>
      </div>
