<h1>New batch</h1>
<%= turbo_frame_tag "batch_form" do %>
    <%= render "form", batch: @batch %>
<% end %>

<%= turbo_frame_tag "batch_import_form" do %>
    <div class="d-flex justify-content-between align-items-end" data-controller="progress-bar">
        <%= form_with url: import_group_remit_batches_path(@group_remit), method: :post do |form| %>
            <%= form.label :file, "For multiple members upload your csv file.", class: "form-text" %>
            <div class="d-flex gap-1  mb-1 align-items-center">
                <%= form.file_field :file, class: "form-control", style: "width: 80%" %>
                <%= submit_tag 'Upload', class: "btn btn-sm btn-outline-success", data: {turbo: 'false'} %>
                <%= link_to "Cancel", :back, class: 'btn btn-sm btn-outline-danger' %>
            </div>
            <!--
            <div class="progress mb-3">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0" data-progress-bar-target="progress">0%</div>
            </div>
            -->
        <% end %>
    </div>
<% end %>