<% if plan_acronym == 'PMFC' %>
		<%= content_tag :span, 
				"Residency: #{months_to_years_months(batch.residency)}", 
				class: "text-secondary sm-green-text"
		%>
		<%= content_tag :span, 
				"Terms: #{batch.duration} months", 
				class: "text-secondary sm-green-text"
		%>
<% end %>
<div class="">
	<%= content_tag :span, 
			"Principal: ", 
			class: "text-secondary sm-green-text"
	%>
	<%= content_tag :span, 
			"#{number_to_currency(batch.premium, unit: "₱", precision: 2)}", 
			class: "text-primary sm-green-text"
	%>
</div>

<% if dependents.exists? %>
	<div class="">
		<%= content_tag :span, 
				"Dependent(s): ", 
				class: "text-secondary sm-green-text" %>
		<%= content_tag :span, 
				"#{number_to_currency(batch.dependents_premium, unit: "₱", precision: 2) }", 
				class: "text-primary sm-green-text" %>
	</div>
<% end %>