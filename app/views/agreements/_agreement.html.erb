<div id="<%= dom_id agreement %>">
  <div class="d-flex gap-3">
    <div class="d-flex justify-content-between" style='width: 200px'>
      <%= content_tag :p, 'Plan'  %>
      <%= content_tag :p, ':' %>
    </div>
    <div class="d-flex">
      <%= content_tag :span, "#{agreement.plan.name}", class: 'text-secondary' %>
      <%= content_tag :span, "(#{agreement.plan.acronym})", class: 'text-secondary' %>
    </div>
  </div>
  <div class="d-flex gap-3">
    <div class="d-flex justify-content-between" style='width: 200px'>
      <%= content_tag :p, 'Anniversary type' %>
      <%= content_tag :p, ':' %>
    </div>
    <%= content_tag :span, "#{agreement.anniversary_type.titleize}", class: 'text-secondary' %>
  </div>
  <div class="d-flex gap-3">
    <div class="d-flex justify-content-between" style='width: 200px'>
      <%= content_tag :p, 'Premium' %>
      <%= content_tag :p, ':' %>
    </div>
    <%= content_tag :span, "#{number_to_currency(agreement.premium, unit: "â‚±", precision: 2)}", class: 'text-secondary' %>
  </div>
  <div class="d-flex gap-3">
    <div class="d-flex justify-content-between" style='width: 200px'>
      <%= content_tag :p, 'Cooperative Service Fee' %>
      <%= content_tag :p, ':' %>
    </div>
    <%= content_tag :span, "#{agreement.coop_service_fee}%", class: 'text-secondary' %>
  </div> 
  <div class="d-flex gap-3">
    <div class="d-flex justify-content-between" style='width: 200px'>
      <%= content_tag :span, 'Notarized date' %>
      <%= content_tag :p, ':' %>
    </div>
    <% if agreement.notarized_date.present? %>
      <%= content_tag :p, "#{agreement.notarized_date.strftime("%B %d, %Y")}", class: 'text-secondary' %>
    <% else %>
      <%= content_tag :p, "Pending", style: "color: #ffc107" %>
    <% end %>
  </div>
  <div class="d-flex gap-3">
    <div class="d-flex justify-content-between" style='width: 200px'>
      <%= content_tag :span, 'MOA signed date' %>
      <%= content_tag :p, ':' %>
    </div>
    <% if agreement.moa_signed_date.present? %>
      <%= content_tag :p, "#{agreement.moa_signed.strftime("%B %d, %Y")}", class: 'text-secondary' %>
    <% else %>
      <%= content_tag :p, "Pending", style: "color: #ffc107" %>
    <% end %>
  </div>
  <div class="d-flex justify-content-center gap-3">
    <%= content_tag :button, "Pending MOA", class: 'btn btn-sm btn-secondary', disabled: true%>
    <% if agreement.group_remits.exists? %>
      <%= link_to 'View Group Remits', agreement_group_remits_path(agreement)	, class: 'btn btn-sm btn-success', data: {turbo: false} %>
    <% end %>
    <%= link_to 'New Group Remit', new_agreement_group_remit_path(agreement)	, class: 'btn btn-sm btn-success', data: {turbo_frame: 'modal'} %>
  </div>
  
</div>
