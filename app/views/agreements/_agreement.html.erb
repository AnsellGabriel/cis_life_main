<div id="<%= dom_id agreement %>" class="row d-flex justify-content-between">
<div class="col-md-12">
  <div class="d-flex gap-3 justify-content-between">
      <%= content_tag :p, 'Plan', class: 'text-secondary'  %>
    <div class="d-flex">
      <%= content_tag :span, "#{agreement.plan.name}" %>
      <%= content_tag :span, "(#{agreement.plan.acronym})" %>
    </div>
  </div>
  <div class="d-flex gap-3 justify-content-between">
    <div class="d-flex justify-content-between" style='width: 200px'>
      <%= content_tag :p, 'Anniversary Date', class: 'text-secondary' %>
    </div>
    <% if agreement.anniversary_type == 'multiple'%>
      <%= content_tag :span, "Multiple" %>
    <% elsif agreement.anniversary_type == 'single'%>
      <%= content_tag :span, "#{agreement.anniversaries[0].anniversary_date.strftime("%B %d")}" %>
    <% else %>
      <%= content_tag :span, "Tentative" %>
    <% end %>
  </div>
  
  </div>
  <div class="col-md-12">
  <div class="d-flex gap-3 justify-content-between">
    <div class="d-flex justify-content-between" style='width: 200px'>
      <%= content_tag :span, 'Notarized date', class: 'text-secondary' %>
    </div>
    <% if agreement.notarized_date.present? %>
      <%= content_tag :p, "#{agreement.notarized_date.strftime("%B %d, %Y")}" %>
    <% else %>
      <%= content_tag :p, "Pending", style: "color: #ffc107" %>
    <% end %>
  </div>
  <div class="d-flex gap-3 justify-content-between">
    <div class="d-flex justify-content-between" style='width: 200px'>
      <%= content_tag :span, 'MOA signed date', class: 'text-secondary' %>
    </div>
    <% if agreement.moa_signed_date.present? %>
      <%= content_tag :p, "#{agreement.moa_signed.strftime("%B %d, %Y")}" %>
    <% else %>
      <%= content_tag :p, "Pending", style: "color: #ffc107" %>
    <% end %>
  </div>
  <div class="d-flex gap-3 justify-content-between">
    <div class="d-flex justify-content-between" style='width: 200px'>
      <%= content_tag :p, 'Cooperative Service Fee', class: 'text-secondary' %>
    </div>
    <%= content_tag :span, "#{@coop_sf}%" %>
  </div> 
  <div class="d-flex gap-3 justify-content-between">
    <div class="d-flex justify-content-between" style='width: 200px'>
      <%= content_tag :p, 'Premium', class: 'text-secondary' %>
    </div>
    <%= content_tag :span, "#{number_to_currency(@principal_premium, unit: "â‚±", precision: 2)}" %>
  </div>
  </div>
</div>
