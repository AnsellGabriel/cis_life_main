<div class="mb-3 d-flex">
  <%= link_to 'MOAs', agreements_path, class: small_btn('secondary') %>
</div>

  <div class="d-flex gap-3">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="<%= flex_justify_align('between', 'center') %>">
            <div class="gap-1">
              <h6 class="card-title mb-0"><%= @agreement.moa_no %></h6>
            </div>
          </div>
          <hr>
          <div class="<%= flex_justify_align('center', 'center') %>">

            <%= render @agreement %>

          </div>
        </div>
        <div class="card-footer <%= flex_justify_align('between') %>">
          <small class="text-muted">Agent: <%= @agreement.agent.full_name %></small>
          <small class="text-muted">Updated: <%= time_ago_in_words(@agreement.updated_at) %></small>
        </div>
      </div>
    </div>

    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="<%= flex_justify_align('between', 'center') %>">
            <div class="d-flex gap-1">
              <h6 class="card-title mb-0">History</h6>
            </div>

          </div>
          <hr>
          <div class="<%= flex_justify_align('', '', true) %> gap-1">
            <% @agreement.group_remits.order(created_at: :desc).each do |group_remit| %>
              <div class="card">
                <div class="card-body <%= flex_justify_align('between', 'center') %> gap-1">
                  <div class="d-flex align-items-center gap-3">
                    <% case group_remit.status %>
                    <% when 'active' %>
                      <span class="<%= badge('success') %>" style="width: 70px;">Active</span>
                    <% when 'renewal' %>
                      <span class="<%= badge('warning') %> text-dark" style="width: 70px;">Renewal</span>
                    <% when 'renewed' %>
                      <span class="<%= badge('success') %>" style="width: 70px;">Renewed</span>
                    <% when 'pending' %>
                      <span class="<%= badge('warning') %> text-dark" style="width: 70px;">Pending</span>
                    <% when 'expired' %>
                      <span class="<%= badge('danger') %>" style="width: 70px;">Expired</span>
                    <% end %>
                    <div class="text-secondary small">
                      <%= content_tag :span, 'Effectivity date: ' %>
                      <span> 
                      <% if group_remit.effectivity_date.present? %>
                        <%= date_as_month_day_year(group_remit.effectivity_date) %>
                      <% else %>
                        Tentative
                      <% end %>
                      </span>
                    </div>
                    <div class="text-secondary small">
                        <%= content_tag :span, 'Expiry date: ' %>
                        <%= content_tag :span, date_as_month_day_year(group_remit.expiry_date) %>
                    </div>
                  </div>
                  <%= link_to 'View', group_remit_path(group_remit), class: small_btn('secondary') %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
