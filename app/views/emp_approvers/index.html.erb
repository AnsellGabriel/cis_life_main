<%= content_tag :h1, "List of Emp Approvers" %>


<div class="text-end mb-3">
  <%= link_to new_emp_approver_path, class: 'btn btn-primary' do %>
    New Emp Approver
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>#</th>
        <th>Employee</th>
        <th>Approver</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @emp_approvers.each do |emp_approver| %>
        <tr>

        <th scope="row"><%= emp_approver.id %></th>
        <td><%= emp_approver.employee %></td>
        <td><%= emp_approver.approver %></td>
    
          <td>
            <%= link_to 'View', emp_approver, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_emp_approver_path(emp_approver), class: 'btn btn-success btn-sm' %>
            <%#= link_to "Delete", emp_approver, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
