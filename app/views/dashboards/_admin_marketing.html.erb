<div class="row">
  <div class="col-md-4 mb-3">
    <div class="card text-dark bg-light mb-3 h-100">
      <div class="card-body">
        
      </div>
      <div class="card-footer"><small>
        <%= link_to "Cooperative", cooperatives_path, class: "link-primary" %> |
        <%= link_to "Claim Type", claims_claim_types_path, class: "link-primary" %> |
        <%= link_to "Authority Level", authority_levels_path, class: "link-primary" %> 
      </small></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <%= turbo_frame_tag "agree_pagination" do %>
      <div class="card mt-2">
        <div class="card-header">
          <div class="row">
            <div class="col-6 float-start">
              <%= content_tag :span, "List of Agreements", class: "lead fw-bold" %>
            </div>
            <div class="col-6 text-end">
              <%= link_to "New Agreement", new_agreement_path, data: { turbo: false }, class: "btn btn-sm btn-success" %>
            </div>
          </div>
        </div>
        <table class="table">
          <thead>
            <th>Cooperative</th>
            <th>Plan</th>
            <th>Marketing</th>
            <th></th>
          </thead>
          <tbody>
            <% @filtered_agreements.each do |agreement| %>
              <tr>
                <td><%= agreement&.cooperative&.name.upcase %></td>
                <td><%= agreement&.plan&.acronym.upcase %></td>
                <td>
                  <% if agreement.agent.present? %>
                    <%= agreement&.agent&.to_s.upcase %>
                  <% else %>
                    <%= content_tag :span, "No Agent." %>
                  <% end %>
                </td>
                <td><%= link_to "View", agreement, data: { turbo: false }, class: "btn btn-sm btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="mb-2 ms-2">
          <%= render PaginationComponent.new(results: @pagy_agreements) %>
        </div>
      </div>
    <% end %>
  </div>
</div>