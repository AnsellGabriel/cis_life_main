
<div class="<%= flex_justify_align('between', 'end') %> mb-1">
  <div class="">
    <div class="<%= flex_justify_align('', 'end') %> gap-1">
      <%= content_tag :h4, "Payees", class: 'text-primary mb-0' %>
      <%= link_to 'New', new_payee_path, class: small_btn('primary')%>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="mt-3">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    <% end %>
  </div>

  <%= search_form_for @q do |f| %>
    <div class="d-flex gap-1">
      <%= f.search_field :name_cont, class: 'form-control', placeholder: 'Payee' %>
      <%= f.submit 'Search', class: 'btn-sm btn btn-warning' %>
    </div>
  <% end %>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @payees.order(:name).each do |payee| %>
      <tr>
        <td>
          <%= payee.name %>
        </td>
        <td class="text-center">
          <%= link_to edit_payee_path(payee), class: 'btn btn-outline-primary btn-sm', title: 'Edit' do %>
            <i class="bi bi-pencil"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
