<div
          data-controller="notification"
          data-notification-delay-value="3000"
          class="transition transform duration-1000 hidden"
          data-transition-enter-from="opacity-0 translate-x-6"
          data-transition-enter-to="opacity-100 translate-x-0"
          data-transition-leave-from="opacity-100 translate-x-0"
          data-transition-leave-to="opacity-0 translate-x-6"
        >
          <% if flash[:alert] %>
            <div class="alert alert-danger text-center"><%= flash[:alert] %></div>
          <% end %>
          <% if flash[:error] %>
            <div class="alert alert-danger text-center"><%= flash[:error] %></div>
          <% end %>
          <% if flash[:notice] %>
            <div class="alert alert-success text-center"><%= flash[:notice] %></div>
          <% end %>
        </div>