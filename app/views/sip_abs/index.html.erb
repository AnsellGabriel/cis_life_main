<%= content_tag :h1, "List of Sip Abs" %>


<div class="text-end mb-3">
  <%= link_to new_sip_ab_path, class: 'btn btn-primary' do %>
    New Sip Ab
  <% end %>
</div>


  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
      <th>#</th>
            <th>Name</th>
            <th>Min Age</th>
            <th>Max Age</th>
            <th>Insured Type</th>
            <th>Exit Age</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
      <% @sip_abs.each do |sip_ab| %>
        <tr>

        <th scope="row"><%= sip_ab.id %></th>
        <td><%= sip_ab.name %></td>
        <td><%= sip_ab.min_age %></td>
        <td><%= sip_ab.max_age %></td>
        <td><%= sip_ab.insured_type %></td>
        <td><%= sip_ab.exit_age %></td>
    
          <td>
            <%= link_to 'View', sip_ab, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_sip_ab_path(sip_ab), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", sip_ab, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
