
<%= simple_form_for(@coop_bank, url: cooperative_coop_banks_path(coop, pc_id: params[:pc_id])) do |f| %>
  <div class="form-inputs mb-3">
    <%= f.input :name, error: '*Required', label: 'Account Name' %>
    <%= f.input :account_number %>
    <%= f.input :address, error: '*Required' %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, 'Add Bank', class: 'btn-success' %>
  </div>
<% end %>
