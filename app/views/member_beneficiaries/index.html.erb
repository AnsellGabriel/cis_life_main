<%= content_tag :h1, "List of Member Beneficiaries" %>


<div class="text-end mb-3">
  <%= link_to new_member_beneficiary_path, class: 'btn btn-primary' do %>
    New Member Beneficiary
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

      <th>ID</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Suffix</th>
        <th>Birth Date</th>
        <th>Relationship</th>
        <th>Member</th>
        <th>Batch</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @member_beneficiaries.each do |member_beneficiary| %>
        <tr>

        <td><%= member_beneficiary.id %></td>
        <td><%= member_beneficiary.last_name %></td>
        <td><%= member_beneficiary.first_name %></td>
        <td><%= member_beneficiary.middle_name %></td>
        <td><%= member_beneficiary.suffix %></td>
        <td><%= member_beneficiary.birth_date %></td>
        <td><%= member_beneficiary.relationship %></td>
        <td><%= member_beneficiary.member %></td>
        <td><%= member_beneficiary.batch %></td>
    
          <td>
            <%= link_to 'View', member_beneficiary, class: 'btn' %>
            <%= link_to 'Edit', edit_member_beneficiary_path(member_beneficiary), class: 'btn' %>
            <%= link_to 'Delete', member_beneficiary, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
