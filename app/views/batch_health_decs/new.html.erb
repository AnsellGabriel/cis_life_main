<%= turbo_frame_tag "reg_form_modal_xl" do %>
  <div class="modal-header">
    <%= content_tag :h5, "Health Declaration - #{@member.last_name}, #{@member.first_name} #{@member.middle_name}", class: "modal-title", id: "staticBackdropLabel" %>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  
  <div class="modal-body">
    <div id="error_notif"></div>
    <span class="text-secondary"><small><i>(Please answer all questions honestly before submitting the form)<i></small></span>
    <%= render "form", batch_health_dec: @batch_health_dec %>
  </div>
<% end %>

